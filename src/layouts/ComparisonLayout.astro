---
/**
 * ComparisonLayout - Premium comparison/review page template
 * 
 * Features:
 * - Elegant hero section with parallax-like background
 * - Premium animated provider comparison cards with Motion
 * - Apple-quality content formatting
 * - Smooth FAQ accordions with animations
 * - Mobile-first responsive design
 * - Full schema markup (Article, FAQ, Aggregate Rating)
 * - Research-based intro section
 * - TOC toggle navigation
 * - Social proof notifications
 * 
 * Usage: Import and pass providers[], seoContent (markdown/HTML), faqs[]
 */
import MainLayout from './MainLayout.astro';
import ComparisonShowcase from '../components/ComparisonShowcase.tsx';
import AnimatedFAQ from '../components/AnimatedFAQ.tsx';
import ComparisonTOCToggle from '../components/ComparisonTOCToggle.tsx';
import CursorTrailDark from '../components/CursorTrailDark.tsx';
import ArticleSchema from '../components/seo/ArticleSchema.astro';
import FAQSchema from '../components/seo/FAQSchema.astro';
import AggregateRatingSchema from '../components/seo/AggregateRatingSchema.astro';
import BreadcrumbSchema from '../components/seo/BreadcrumbSchema.astro';
import { marked } from 'marked';

// Configure marked for proper table rendering
marked.setOptions({
  gfm: true,
  breaks: true
});

interface Provider {
  name: string;
  logo: string;
  bestFor: string;
  monthlyAvg: string;
  serviceFee?: string;
  rating: number;
  amBest?: string;
  pros: string[];
  cons: string[];
  description: string;
  affiliateUrl?: string;
}

interface FAQ {
  question: string;
  answer: string;
}

interface TOCItem {
  id: string;
  label: string;
  href: string;
}

interface Props {
  title: string;
  description: string;
  category: string;
  categoryLabel: string;
  heroImage: string;
  author?: string;
  date?: string;
  providers: Provider[];
  faqs?: FAQ[];
  researchIntro?: string;
  tocItems?: TOCItem[];
  content?: string; // Markdown content as string
}

const { 
  title, 
  description, 
  category,
  categoryLabel,
  heroImage, 
  author = "Screened Editorial Team",
  date = new Date().toLocaleDateString('en-US', { month: 'short', day: 'numeric', year: 'numeric' }),
  providers,
  faqs = [],
  researchIntro,
  tocItems,
  content
} = Astro.props;

// Process markdown content if provided
const processedContent = content ? await marked.parse(content) : null;

// Get current URL for schema
const currentUrl = Astro.url.pathname;

// Calculate average rating from providers
const avgRating = providers.length > 0 
  ? providers.reduce((sum, p) => sum + p.rating, 0) / providers.length 
  : 4.5;

// Breadcrumb items
const breadcrumbItems = [
  { name: category, url: `/${category.toLowerCase()}` },
  { name: title }
];
---

<MainLayout title={title} description={description}>
  <!-- Schema Markup -->
  <ArticleSchema 
    title={title}
    description={description}
    url={currentUrl}
    image={heroImage}
    datePublished={new Date()}
    dateModified={new Date()}
    author={author}
    section={category}
    tags={[category.toLowerCase(), 'comparison', 'reviews']}
  />
  
  {faqs.length > 0 && (
    <FAQSchema faqs={faqs} />
  )}
  
  <AggregateRatingSchema
    itemName={title}
    itemType="Article"
    rating={avgRating}
    reviewCount={providers.length * 47}
    url={currentUrl}
    image={heroImage}
    description={description}
  />
  
  <BreadcrumbSchema items={breadcrumbItems} />
  
  <!-- Animated Header with Cursor Trail -->
  <CursorTrailDark 
    client:load
    title={title}
    kicker=""
    subtitle={description}
    author={author}
    date={date}
    compact={true}
    animateTitle={true}
  />

  <!-- Elegant Disclosure -->
  <section class="disclosure-section">
    <div class="disclosure-container">
      <p class="disclosure-text">
        <svg class="disclosure-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <circle cx="12" cy="12" r="10"/>
          <line x1="12" y1="16" x2="12" y2="12" stroke-linecap="round"/>
          <line x1="12" y1="8" x2="12.01" y2="8" stroke-linecap="round"/>
        </svg>
        We may receive compensation when you click on links to products. Our analysis, reviews, and opinions are entirely from our editorial team. <a href="/advertising">Learn more</a>
      </p>
    </div>
  </section>

  <!-- TOC Toggle Navigation -->
  <section class="toc-section sticky top-16 z-40">
    <div class="toc-container">
      <ComparisonTOCToggle items={tocItems} client:load />
    </div>
  </section>

  <!-- Research-Based Introduction -->
  {researchIntro && (
    <section id="providers" class="research-intro-section">
      <div class="research-intro-container">
        <p class="research-intro-text">{researchIntro}</p>
      </div>
    </section>
  )}

  <!-- Premium Provider Cards -->
  <div id={researchIntro ? "" : "providers"}>
    <ComparisonShowcase 
      providers={providers} 
      showFilters={true}
      client:load 
    />
  </div>

  <!-- Premium SEO Content Section -->
  <div id="guide">
    <section class="premium-content-section">
      <div class="content-container">
        {processedContent ? (
          <div class="premium-content" set:html={processedContent} />
        ) : (
          <div class="premium-content">
            <slot />
          </div>
        )}
      </div>
    </section>
  </div>

  <!-- Animated FAQ Section -->
  {faqs.length > 0 && (
    <div id="faq">
      <AnimatedFAQ faqs={faqs} client:visible />
    </div>
  )}

  <!-- Styles -->
  <style>
    /* Disclosure Section */
    .disclosure-section {
      background: #ffffff;
      border-bottom: 1px solid #f1f5f9;
      padding: 1rem 0;
    }

    .disclosure-container {
      max-width: 900px;
      margin: 0 auto;
      padding: 0 1.5rem;
    }

    .disclosure-text {
      display: flex;
      align-items: flex-start;
      gap: 0.75rem;
      margin: 0;
      font-size: 0.8rem;
      color: #64748b;
      line-height: 1.6;
    }

    .disclosure-icon {
      width: 16px;
      height: 16px;
      flex-shrink: 0;
      margin-top: 2px;
      stroke: #94a3b8;
    }

    .disclosure-text a {
      color: #3b82f6;
      text-decoration: none;
      font-weight: 500;
    }

    .disclosure-text a:hover {
      text-decoration: underline;
    }

    /* TOC Section */
    .toc-section {
      background: #ffffff;
      border-bottom: 1px solid #e2e8f0;
      padding: 0.75rem 0;
    }

    .toc-container {
      max-width: 900px;
      margin: 0 auto;
      padding: 0 1.5rem;
    }

    /* Research Intro Section */
    .research-intro-section {
      background: #f8fafc;
      padding: 2rem 0;
      scroll-margin-top: 120px;
    }

    .research-intro-container {
      max-width: 900px;
      margin: 0 auto;
      padding: 0 1.5rem;
    }

    .research-intro-text {
      font-size: 1.0625rem;
      color: #475569;
      line-height: 1.8;
      margin: 0;
      text-align: center;
    }

    @media (max-width: 640px) {
      .research-intro-text {
        font-size: 0.9375rem;
        text-align: left;
      }
    }

    /* Premium Content Section */
    .premium-content-section {
      padding: 4rem 0;
      background: #ffffff;
    }

    .content-container {
      max-width: 800px;
      margin: 0 auto;
      padding: 0 1.5rem;
    }

    .premium-content {
      color: #374151;
      font-size: 1.0625rem;
      line-height: 1.85;
    }

    .premium-content h2 {
      font-family: 'Sora', sans-serif;
      font-size: 1.75rem;
      font-weight: 700;
      color: #0f172a;
      margin: 3rem 0 1.25rem;
      letter-spacing: -0.02em;
    }

    .premium-content h2:first-child {
      margin-top: 0;
    }

    .premium-content h3 {
      font-family: 'Sora', sans-serif;
      font-size: 1.25rem;
      font-weight: 600;
      color: #1e293b;
      margin: 2rem 0 1rem;
      letter-spacing: -0.01em;
    }

    .premium-content p {
      margin: 0 0 1.5rem;
    }

    .premium-content ul,
    .premium-content ol {
      margin: 0 0 1.5rem;
      padding-left: 1.5rem;
    }

    .premium-content li {
      margin-bottom: 0.5rem;
    }

    .premium-content strong {
      font-weight: 600;
      color: #1e293b;
    }

    .premium-content a {
      color: #3b82f6;
      text-decoration: none;
      font-weight: 500;
    }

    .premium-content a:hover {
      text-decoration: underline;
    }

    .premium-content table {
      width: 100%;
      border-collapse: collapse;
      margin: 1.5rem 0;
      font-size: 0.9375rem;
      display: table;
      table-layout: auto;
      border: 1px solid #e5e7eb;
      border-radius: 8px;
      overflow: hidden;
    }

    .premium-content thead {
      background: #f8fafc;
    }

    .premium-content th,
    .premium-content td {
      padding: 0.75rem 1rem;
      text-align: left;
      border: 1px solid #e5e7eb;
      vertical-align: top;
    }

    .premium-content th {
      font-weight: 600;
      color: #1e293b;
      background: #f1f5f9;
      white-space: nowrap;
    }

    .premium-content tbody tr:nth-child(even) {
      background: #fafafa;
    }

    .premium-content tbody tr:hover {
      background: #f0f9ff;
    }

    .premium-content blockquote {
      border-left: 4px solid #3b82f6;
      padding-left: 1.5rem;
      margin: 1.5rem 0;
      color: #64748b;
      font-style: italic;
    }

    .premium-content code {
      background: #f1f5f9;
      padding: 0.2rem 0.4rem;
      border-radius: 0.25rem;
      font-size: 0.875em;
    }

    /* Custom Content Boxes */
    .premium-content .key-takeaways {
      background: linear-gradient(135deg, #f0f9ff 0%, #e0f2fe 100%);
      border: 1px solid #bae6fd;
      border-radius: 12px;
      padding: 1.5rem 2rem;
      margin: 2rem 0;
    }

    .premium-content .key-takeaways h3 {
      color: #0369a1;
      margin-top: 0;
      font-size: 1.125rem;
      display: flex;
      align-items: center;
      gap: 0.5rem;
    }

    .premium-content .key-takeaways ul {
      margin-bottom: 0;
    }

    .premium-content .info-box {
      background: #f8fafc;
      border-left: 4px solid #3b82f6;
      border-radius: 0 8px 8px 0;
      padding: 1.25rem 1.5rem;
      margin: 1.5rem 0;
    }

    .premium-content .info-box h4 {
      color: #1e40af;
      margin: 0 0 0.5rem;
      font-size: 0.9375rem;
    }

    .premium-content .info-box p {
      margin: 0;
      color: #475569;
    }

    .premium-content .warning-box {
      background: #fefce8;
      border-left: 4px solid #eab308;
      border-radius: 0 8px 8px 0;
      padding: 1.25rem 1.5rem;
      margin: 1.5rem 0;
    }

    .premium-content .warning-box h4 {
      color: #a16207;
      margin: 0 0 0.5rem;
      font-size: 0.9375rem;
    }

    .premium-content .warning-box p {
      margin: 0;
      color: #713f12;
    }

    .premium-content .success-box {
      background: #f0fdf4;
      border-left: 4px solid #22c55e;
      border-radius: 0 8px 8px 0;
      padding: 1.25rem 1.5rem;
      margin: 1.5rem 0;
    }

    .premium-content .success-box h4 {
      color: #15803d;
      margin: 0 0 0.5rem;
      font-size: 0.9375rem;
    }

    .premium-content .success-box ul {
      margin: 0;
      color: #166534;
    }

    @media (max-width: 768px) {
      .premium-content-section {
        padding: 2.5rem 0;
      }

      .premium-content {
        font-size: 1rem;
      }

      .premium-content h2 {
        font-size: 1.5rem;
        margin: 2.5rem 0 1rem;
      }

      .premium-content h3 {
        font-size: 1.125rem;
      }

      .premium-content table {
        font-size: 0.8125rem;
        display: block;
        overflow-x: auto;
        -webkit-overflow-scrolling: touch;
      }

      .premium-content th,
      .premium-content td {
        padding: 0.5rem 0.75rem;
        min-width: 100px;
      }
    }

    /* Responsive */
    @media (max-width: 640px) {
      .hero-container {
        padding: 0 1rem;
      }

      .hero-content {
        padding: 3rem 0 5rem;
      }

      .hero-description {
        font-size: 1rem;
      }

      .hero-meta {
        flex-direction: column;
        gap: 0.5rem;
      }

      .meta-divider {
        display: none;
      }

      .scroll-indicator {
        display: none;
      }
    }
  </style>
</MainLayout>
