---
/**
 * ComparisonLayout - Premium comparison/review page template
 * 
 * Features:
 * - Elegant hero section with parallax-like background
 * - Premium animated provider comparison cards with Motion
 * - Apple-quality content formatting
 * - Smooth FAQ accordions with animations
 * - Mobile-first responsive design
 * - Full schema markup (Article, FAQ, Aggregate Rating)
 * - Research-based intro section
 * - TOC toggle navigation
 * - Social proof notifications
 * 
 * Usage: Import and pass providers[], seoContent (markdown/HTML), faqs[]
 */
import MainLayout from './MainLayout.astro';
import ComparisonShowcase from '../components/ComparisonShowcase.tsx';
import AnimatedFAQ from '../components/AnimatedFAQ.tsx';
import PremiumContentSection from '../components/PremiumContentSection.tsx';
import ComparisonTOCToggle from '../components/ComparisonTOCToggle.tsx';
import ArticleSchema from '../components/seo/ArticleSchema.astro';
import FAQSchema from '../components/seo/FAQSchema.astro';
import AggregateRatingSchema from '../components/seo/AggregateRatingSchema.astro';
import BreadcrumbSchema from '../components/seo/BreadcrumbSchema.astro';

interface Provider {
  name: string;
  logo: string;
  bestFor: string;
  monthlyAvg: string;
  serviceFee?: string;
  rating: number;
  amBest?: string;
  pros: string[];
  cons: string[];
  description: string;
  affiliateUrl?: string;
}

interface FAQ {
  question: string;
  answer: string;
}

interface TOCItem {
  id: string;
  label: string;
  href: string;
}

interface Props {
  title: string;
  description: string;
  category: string;
  categoryLabel: string;
  heroImage: string;
  author?: string;
  date?: string;
  providers: Provider[];
  faqs?: FAQ[];
  researchIntro?: string;
  tocItems?: TOCItem[];
}

const { 
  title, 
  description, 
  category,
  categoryLabel,
  heroImage, 
  author = "Screened Editorial Team",
  date = new Date().toLocaleDateString('en-US', { month: 'short', day: 'numeric', year: 'numeric' }),
  providers,
  faqs = [],
  researchIntro,
  tocItems
} = Astro.props;

// Get current URL for schema
const currentUrl = Astro.url.pathname;

// Calculate average rating from providers
const avgRating = providers.length > 0 
  ? providers.reduce((sum, p) => sum + p.rating, 0) / providers.length 
  : 4.5;

// Breadcrumb items
const breadcrumbItems = [
  { name: category, url: `/${category.toLowerCase()}` },
  { name: title }
];
---

<MainLayout title={title} description={description}>
  <!-- Schema Markup -->
  <ArticleSchema 
    title={title}
    description={description}
    url={currentUrl}
    image={heroImage}
    datePublished={new Date()}
    dateModified={new Date()}
    author={author}
    section={category}
    tags={[category.toLowerCase(), 'comparison', 'reviews']}
  />
  
  {faqs.length > 0 && (
    <FAQSchema faqs={faqs} />
  )}
  
  <AggregateRatingSchema
    itemName={title}
    itemType="Article"
    rating={avgRating}
    reviewCount={providers.length * 47}
    url={currentUrl}
    image={heroImage}
    description={description}
  />
  
  <BreadcrumbSchema items={breadcrumbItems} />
  <!-- Premium Hero Section -->
  <section class="premium-hero">
    <div class="hero-background">
      <img src={heroImage} alt={title} class="hero-image" loading="eager" />
      <div class="hero-overlay"></div>
      <div class="hero-gradient-bottom"></div>
    </div>
    
    <div class="hero-content">
      <div class="hero-container">
        <span class="hero-label">{categoryLabel}</span>
        <h1 class="hero-title">{title}</h1>
        <p class="hero-description">{description}</p>
        
        <div class="hero-meta">
          <div class="meta-author">
            <svg class="meta-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <path d="M20 21v-2a4 4 0 0 0-4-4H8a4 4 0 0 0-4 4v2" stroke-linecap="round" stroke-linejoin="round"/>
              <circle cx="12" cy="7" r="4"/>
            </svg>
            <span>{author}</span>
          </div>
          <span class="meta-divider">â€¢</span>
          <div class="meta-date">
            <svg class="meta-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <rect x="3" y="4" width="18" height="18" rx="2" ry="2"/>
              <line x1="16" y1="2" x2="16" y2="6" stroke-linecap="round"/>
              <line x1="8" y1="2" x2="8" y2="6" stroke-linecap="round"/>
              <line x1="3" y1="10" x2="21" y2="10"/>
            </svg>
            <span>Updated {date}</span>
          </div>
        </div>
        
        <!-- Scroll indicator -->
        <div class="scroll-indicator">
          <span>Scroll to explore</span>
          <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <path d="M12 5v14M19 12l-7 7-7-7" stroke-linecap="round" stroke-linejoin="round"/>
          </svg>
        </div>
      </div>
    </div>
  </section>

  <!-- Elegant Disclosure -->
  <section class="disclosure-section">
    <div class="disclosure-container">
      <p class="disclosure-text">
        <svg class="disclosure-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <circle cx="12" cy="12" r="10"/>
          <line x1="12" y1="16" x2="12" y2="12" stroke-linecap="round"/>
          <line x1="12" y1="8" x2="12.01" y2="8" stroke-linecap="round"/>
        </svg>
        We may receive compensation when you click on links to products. Our analysis, reviews, and opinions are entirely from our editorial team. <a href="/advertising">Learn more</a>
      </p>
    </div>
  </section>

  <!-- TOC Toggle Navigation -->
  <section class="toc-section sticky top-16 z-40">
    <div class="toc-container">
      <ComparisonTOCToggle items={tocItems} client:load />
    </div>
  </section>

  <!-- Research-Based Introduction -->
  {researchIntro && (
    <section id="providers" class="research-intro-section">
      <div class="research-intro-container">
        <p class="research-intro-text">{researchIntro}</p>
      </div>
    </section>
  )}

  <!-- Premium Provider Cards -->
  <div id={researchIntro ? "" : "providers"}>
    <ComparisonShowcase 
      providers={providers} 
      showFilters={true}
      client:load 
    />
  </div>

  <!-- Premium SEO Content Section -->
  <div id="guide">
    <PremiumContentSection client:visible>
      <slot />
    </PremiumContentSection>
  </div>

  <!-- Animated FAQ Section -->
  {faqs.length > 0 && (
    <div id="faq">
      <AnimatedFAQ faqs={faqs} client:visible />
    </div>
  )}

  <!-- Styles -->
  <style>
    /* Premium Hero */
    .premium-hero {
      position: relative;
      min-height: 480px;
      display: flex;
      align-items: center;
      overflow: hidden;
    }

    @media (max-width: 768px) {
      .premium-hero {
        min-height: 400px;
      }
    }

    .hero-background {
      position: absolute;
      inset: 0;
    }

    .hero-image {
      width: 100%;
      height: 100%;
      object-fit: cover;
      object-position: center;
    }

    .hero-overlay {
      position: absolute;
      inset: 0;
      background: linear-gradient(
        135deg,
        rgba(15, 23, 42, 0.92) 0%,
        rgba(30, 41, 59, 0.85) 50%,
        rgba(15, 23, 42, 0.88) 100%
      );
    }

    .hero-gradient-bottom {
      position: absolute;
      bottom: 0;
      left: 0;
      right: 0;
      height: 120px;
      background: linear-gradient(to top, #f8fafc 0%, transparent 100%);
    }

    .hero-content {
      position: relative;
      z-index: 10;
      width: 100%;
      padding: 4rem 0 6rem;
    }

    .hero-container {
      max-width: 800px;
      margin: 0 auto;
      padding: 0 1.5rem;
      text-align: center;
    }

    .hero-label {
      display: inline-block;
      padding: 8px 20px;
      background: rgba(59, 130, 246, 0.15);
      backdrop-filter: blur(8px);
      border: 1px solid rgba(59, 130, 246, 0.3);
      color: #60a5fa;
      font-family: 'Lexend', sans-serif;
      font-weight: 600;
      font-size: 0.75rem;
      border-radius: 100px;
      text-transform: uppercase;
      letter-spacing: 0.1em;
      margin-bottom: 1.25rem;
      animation: fadeInDown 0.6s ease-out;
    }

    .hero-title {
      font-family: 'Sora', sans-serif;
      font-size: clamp(2rem, 5vw, 3rem);
      font-weight: 700;
      color: #ffffff;
      margin: 0 0 1rem;
      line-height: 1.2;
      animation: fadeInUp 0.6s ease-out 0.1s both;
    }

    .hero-description {
      font-size: 1.125rem;
      color: rgba(255, 255, 255, 0.85);
      line-height: 1.7;
      margin: 0 auto 1.5rem;
      max-width: 600px;
      animation: fadeInUp 0.6s ease-out 0.2s both;
    }

    .hero-meta {
      display: flex;
      align-items: center;
      justify-content: center;
      gap: 1rem;
      color: rgba(255, 255, 255, 0.6);
      font-size: 0.875rem;
      animation: fadeInUp 0.6s ease-out 0.3s both;
    }

    .meta-author,
    .meta-date {
      display: flex;
      align-items: center;
      gap: 0.5rem;
    }

    .meta-icon {
      width: 16px;
      height: 16px;
    }

    .meta-divider {
      opacity: 0.4;
    }

    .scroll-indicator {
      display: flex;
      flex-direction: column;
      align-items: center;
      gap: 0.5rem;
      margin-top: 2.5rem;
      color: rgba(255, 255, 255, 0.4);
      font-size: 0.75rem;
      text-transform: uppercase;
      letter-spacing: 0.1em;
      animation: fadeIn 0.6s ease-out 0.5s both;
    }

    .scroll-indicator svg {
      animation: bounce 2s infinite;
    }

    @keyframes bounce {
      0%, 20%, 50%, 80%, 100% {
        transform: translateY(0);
      }
      40% {
        transform: translateY(8px);
      }
      60% {
        transform: translateY(4px);
      }
    }

    @keyframes fadeIn {
      from { opacity: 0; }
      to { opacity: 1; }
    }

    @keyframes fadeInUp {
      from {
        opacity: 0;
        transform: translateY(20px);
      }
      to {
        opacity: 1;
        transform: translateY(0);
      }
    }

    @keyframes fadeInDown {
      from {
        opacity: 0;
        transform: translateY(-10px);
      }
      to {
        opacity: 1;
        transform: translateY(0);
      }
    }

    /* Disclosure Section */
    .disclosure-section {
      background: #ffffff;
      border-bottom: 1px solid #f1f5f9;
      padding: 1rem 0;
    }

    .disclosure-container {
      max-width: 900px;
      margin: 0 auto;
      padding: 0 1.5rem;
    }

    .disclosure-text {
      display: flex;
      align-items: flex-start;
      gap: 0.75rem;
      margin: 0;
      font-size: 0.8rem;
      color: #64748b;
      line-height: 1.6;
    }

    .disclosure-icon {
      width: 16px;
      height: 16px;
      flex-shrink: 0;
      margin-top: 2px;
      stroke: #94a3b8;
    }

    .disclosure-text a {
      color: #3b82f6;
      text-decoration: none;
      font-weight: 500;
    }

    .disclosure-text a:hover {
      text-decoration: underline;
    }

    /* TOC Section */
    .toc-section {
      background: #ffffff;
      border-bottom: 1px solid #e2e8f0;
      padding: 0.75rem 0;
    }

    .toc-container {
      max-width: 900px;
      margin: 0 auto;
      padding: 0 1.5rem;
    }

    /* Research Intro Section */
    .research-intro-section {
      background: #f8fafc;
      padding: 2rem 0;
      scroll-margin-top: 120px;
    }

    .research-intro-container {
      max-width: 900px;
      margin: 0 auto;
      padding: 0 1.5rem;
    }

    .research-intro-text {
      font-size: 1.0625rem;
      color: #475569;
      line-height: 1.8;
      margin: 0;
      text-align: center;
    }

    @media (max-width: 640px) {
      .research-intro-text {
        font-size: 0.9375rem;
        text-align: left;
      }
    }

    /* Responsive */
    @media (max-width: 640px) {
      .hero-container {
        padding: 0 1rem;
      }

      .hero-content {
        padding: 3rem 0 5rem;
      }

      .hero-description {
        font-size: 1rem;
      }

      .hero-meta {
        flex-direction: column;
        gap: 0.5rem;
      }

      .meta-divider {
        display: none;
      }

      .scroll-indicator {
        display: none;
      }
    }
  </style>
</MainLayout>
