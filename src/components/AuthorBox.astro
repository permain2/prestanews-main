---
/**
 * Author Box Component
 * Displays author information with schema markup for E-E-A-T signals
 */

interface Props {
  name: string;
  role?: string;
  image?: string;
  bio?: string;
  twitter?: string;
  linkedin?: string;
  class?: string;
}

const { 
  name, 
  role = 'Editorial Team',
  image = '/team/default-author.jpg',
  bio = 'Our editorial team is dedicated to providing accurate, unbiased financial guidance to help you make informed decisions.',
  twitter,
  linkedin,
  class: className = ''
} = Astro.props;
---

<aside class={`author-box ${className}`} itemscope itemtype="https://schema.org/Person">
  <div class="author-avatar">
    <img 
      src={image} 
      alt={name}
      itemprop="image"
      width="80"
      height="80"
      loading="lazy"
      decoding="async"
    />
  </div>
  <div class="author-info">
    <div class="author-header">
      <h3 class="author-name" itemprop="name">{name}</h3>
      <span class="author-role" itemprop="jobTitle">{role}</span>
    </div>
    <p class="author-bio" itemprop="description">{bio}</p>
    {(twitter || linkedin) && (
      <div class="author-social">
        {twitter && (
          <a 
            href={`https://twitter.com/${twitter}`} 
            target="_blank" 
            rel="noopener noreferrer"
            aria-label={`Follow ${name} on Twitter`}
            itemprop="sameAs"
          >
            <svg width="20" height="20" viewBox="0 0 24 24" fill="currentColor">
              <path d="M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z"/>
            </svg>
          </a>
        )}
        {linkedin && (
          <a 
            href={`https://linkedin.com/in/${linkedin}`} 
            target="_blank" 
            rel="noopener noreferrer"
            aria-label={`Connect with ${name} on LinkedIn`}
            itemprop="sameAs"
          >
            <svg width="20" height="20" viewBox="0 0 24 24" fill="currentColor">
              <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
            </svg>
          </a>
        )}
      </div>
    )}
  </div>
</aside>

<style>
  .author-box {
    display: flex;
    gap: 1.25rem;
    padding: 1.5rem;
    background: #F7F8FA;
    border-radius: 0.5rem;
    margin-top: 2rem;
  }

  .author-avatar {
    flex-shrink: 0;
  }

  .author-avatar img {
    width: 80px;
    height: 80px;
    border-radius: 50%;
    object-fit: cover;
  }

  .author-info {
    flex: 1;
  }

  .author-header {
    margin-bottom: 0.5rem;
  }

  .author-name {
    font-family: 'Sora', sans-serif;
    font-size: 1.125rem;
    font-weight: 700;
    color: #162433;
    margin: 0 0 0.25rem;
  }

  .author-role {
    font-family: 'Poppins', sans-serif;
    font-size: 0.875rem;
    color: #68727C;
  }

  .author-bio {
    font-family: 'Poppins', sans-serif;
    font-size: 0.9375rem;
    line-height: 1.6;
    color: #162433;
    margin: 0.75rem 0;
  }

  .author-social {
    display: flex;
    gap: 0.75rem;
    margin-top: 0.75rem;
  }

  .author-social a {
    color: #68727C;
    transition: color 0.2s;
  }

  .author-social a:hover {
    color: #146aff;
  }

  @media (max-width: 640px) {
    .author-box {
      flex-direction: column;
      text-align: center;
    }

    .author-avatar {
      margin: 0 auto;
    }

    .author-social {
      justify-content: center;
    }
  }
</style>









