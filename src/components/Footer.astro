      <!-- Credit Cards -->
      <div class="footer-column">
        <h4 class="footer-heading">Credit Cards</h4>
        <ul class="footer-links">
          <li><a href="/credit-cards/best-travel-cards" class="footer-link">Best Travel Cards</a></li>
          <li><a href="/credit-cards/best-cashback" class="footer-link">Best Cash Back Cards</a></li>
          <li><a href="/credit-cards/business" class="footer-link">Business Cards</a></li>
          <li><a href="/credit-cards/no-annual-fee" class="footer-link">No Annual Fee</a></li>
          <li><a href="/credit-cards/balance-transfer" class="footer-link">Balance Transfer</a></li>
        </ul>
      </div>

      <!-- Insurance -->
      <div class="footer-column">
        <h4 class="footer-heading">Insurance</h4>
        <ul class="footer-links">
          <li><a href="/insurance/car" class="footer-link">Car Insurance</a></li>
          <li><a href="/insurance/home" class="footer-link">Home Insurance</a></li>
          <li><a href="/insurance/renters" class="footer-link">Renters Insurance</a></li>
          <li><a href="/insurance/life" class="footer-link">Life Insurance</a></li>
          <li><a href="/insurance/pet" class="footer-link">Pet Insurance</a></li>
        </ul>
      </div>

      <!-- Resources -->
      <div class="footer-column">
        <h4 class="footer-heading">Resources</h4>
        <ul class="footer-links">
          <li><a href="/blog" class="footer-link">Blog</a></li>
          <li><a href="/reviews" class="footer-link">Reviews</a></li>
          <li><a href="/newsletter" class="footer-link">Newsletter</a></li>
        </ul>
      </div>

      <!-- About -->
      <div class="footer-column">
        <h4 class="footer-heading">Company</h4>
        <ul class="footer-links">
          <li><a href="/about" class="footer-link">About Us</a></li>
          <li><a href="/contact" class="footer-link">Contact</a></li>
          <li><a href="/careers" class="footer-link">Careers</a></li>
          <li><a href="/sitemap" class="footer-link">Sitemap</a></li>
        </ul>
