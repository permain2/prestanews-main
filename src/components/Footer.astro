    </div>
  </div>

  <!-- Bottom Bar -->
  <div class="footer-bottom">
    <div class="footer-bottom-inner">
      <!-- Left: Made with love tagline -->
      <div class="footer-credits">
        <span class="footer-made-with">
          Made with 
          <span class="heart-icon" aria-label="love">
            <svg viewBox="0 0 24 24" fill="currentColor" width="14" height="14">
              <path d="M12 21.35l-1.45-1.32C5.4 15.36 2 12.28 2 8.5 2 5.42 4.42 3 7.5 3c1.74 0 3.41.81 4.5 2.09C13.09 3.81 14.76 3 16.5 3 19.58 3 22 5.42 22 8.5c0 3.78-3.4 6.86-8.55 11.54L12 21.35z"/>
            </svg>
          </span>
          in New York
        </span>
        <span class="footer-divider">·</span>
        <span class="footer-copyright">© {currentYear} {SITE_TITLE}</span>
      </div>

      <!-- Center: Legal Links -->
      <div class="footer-legal">
        <a href="/privacy" class="footer-legal-link">Privacy</a>
        <a href="/terms" class="footer-legal-link">Terms</a>
        <a href="/do-not-sell" class="footer-legal-link">Do Not Sell</a>
        <a href="/consumer-health-data-privacy" class="footer-legal-link">Health Data</a>
        <a href="/advertising" class="footer-legal-link">Advertising</a>
      </div>

      <!-- Right: Newsletter -->
      <form class="footer-bottom-newsletter" id="footer-newsletter">
        <input type="email" placeholder="your@email.com" class="bottom-newsletter-input" required />
        <button type="submit" class="bottom-newsletter-btn">Subscribe</button>
      </form>
    </div>

    <!-- Disclaimer -->
    <div class="footer-disclaimer">
      <p>
        Disclaimer: The content on this site is for informational purposes only. We may receive compensation when you click on links to products. 
        Our analysis and opinions are our own and are not influenced by any advertiser or partner.
      </p>
    </div>
  </div>
</footer>

<style>
  .footer-section {
    background: #0D2C4B;
    color: #FFFFFF;
  }

  .footer-main {
    max-width: 90rem;
    margin: 0 auto;
    padding: 4rem 2rem;
  }

  .footer-grid {
    display: grid;
    grid-template-columns: 2fr repeat(4, 1fr);
    gap: 2.5rem;
  }

  .footer-brand {
    padding-right: 2rem;
  }

  .footer-logo {
    height: 3rem;
    width: auto;
    margin-bottom: 1.5rem;
    filter: brightness(0) invert(1);
  }

  .footer-tagline {
    font-family: 'Poppins', sans-serif;
    font-size: 0.9375rem;
    color: rgba(255, 255, 255, 0.75);
    line-height: 1.7;
    margin-bottom: 1.5rem;
    max-width: 20rem;
  }

  .footer-socials {
    display: flex;
    gap: 0.75rem;
  }

  .social-link {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 2.25rem;
    height: 2.25rem;
    background: rgba(255, 255, 255, 0.1);
    border-radius: 0.5rem;
    color: rgba(255, 255, 255, 0.7);
    transition: all 0.2s ease;
  }

  .social-link:hover {
    background: rgba(255, 255, 255, 0.2);
    color: #FFFFFF;
  }

  .footer-column {
    min-width: 0;
  }

  .footer-heading {
    font-family: 'Lexend', sans-serif;
    font-size: 0.75rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.08em;
    color: rgba(255, 255, 255, 0.5);
    margin-bottom: 1.25rem;
  }

  .footer-links {
    display: flex;
    flex-direction: column;
    gap: 0.75rem;
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .footer-link {
    font-family: 'Poppins', sans-serif;
    font-size: 0.9375rem;
    color: rgba(255, 255, 255, 0.85) !important;
    text-decoration: none !important;
    transition: color 0.15s ease;
  }

  .footer-link:hover {
    color: #FFFFFF !important;
  }

  /* Bottom Bar */
  .footer-bottom {
    border-top: 1px solid rgba(255, 255, 255, 0.1);
    background: rgba(0, 0, 0, 0.15);
  }

  .footer-bottom-inner {
    max-width: 90rem;
    margin: 0 auto;
    padding: 1.25rem 2rem;
    display: flex;
    align-items: center;
    justify-content: space-between;
    flex-wrap: wrap;
    gap: 1rem;
  }

  .footer-credits {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    font-family: 'Poppins', sans-serif;
    font-size: 0.8125rem;
    color: rgba(255, 255, 255, 0.6);
  }

  .footer-made-with {
    display: flex;
    align-items: center;
    gap: 0.35rem;
  }

  .heart-icon {
    color: #ef4444;
    display: flex;
    align-items: center;
    animation: heartbeat 1.5s ease-in-out infinite;
  }

  @keyframes heartbeat {
    0%, 100% { transform: scale(1); }
    50% { transform: scale(1.15); }
  }

  .footer-divider {
    opacity: 0.4;
  }

  .footer-copyright {
    color: rgba(255, 255, 255, 0.5);
  }

  .footer-legal {
    display: flex;
    align-items: center;
    gap: 1.5rem;
  }

  .footer-legal-link {
    font-family: 'Poppins', sans-serif;
    font-size: 0.8125rem;
    color: rgba(255, 255, 255, 0.5) !important;
    text-decoration: none !important;
    transition: color 0.15s ease;
  }

  .footer-legal-link:hover {
    color: rgba(255, 255, 255, 0.85) !important;
  }

  /* Bottom Newsletter - Enhanced with Motion-inspired animations */
  .footer-bottom-newsletter {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    position: relative;
  }

  .bottom-newsletter-input {
    padding: 0.5rem 0.75rem;
    border: 1px solid rgba(255, 255, 255, 0.15);
    border-radius: 0.375rem;
    background: rgba(255, 255, 255, 0.08);
    color: white;
    font-family: 'Poppins', sans-serif;
    font-size: 0.8125rem;
    width: 160px;
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    transform-origin: left center;
  }

  .bottom-newsletter-input::placeholder {
    color: rgba(255, 255, 255, 0.35);
    transition: opacity 0.2s ease;
  }

  .bottom-newsletter-input:focus {
    outline: none;
    border-color: #146aff;
    background: rgba(255, 255, 255, 0.12);
    box-shadow: 0 0 0 3px rgba(20, 106, 255, 0.2);
    width: 180px;
  }

  .bottom-newsletter-input:focus::placeholder {
    opacity: 0.5;
  }

  .bottom-newsletter-btn {
    padding: 0.5rem 1rem;
    background: linear-gradient(135deg, #146aff 0%, #0040B1 100%);
    color: white;
    border: none;
    border-radius: 0.375rem;
    font-family: 'Sora', sans-serif;
    font-size: 0.75rem;
    font-weight: 600;
    cursor: pointer;
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    white-space: nowrap;
    min-width: 80px;
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 0.375rem;
    position: relative;
    overflow: hidden;
  }

  .bottom-newsletter-btn::before {
    content: '';
    position: absolute;
    top: 0;
    left: -100%;
    width: 100%;
    height: 100%;
    background: linear-gradient(90deg, transparent, rgba(255,255,255,0.2), transparent);
    transition: left 0.5s ease;
  }

  .bottom-newsletter-btn:hover:not(:disabled) {
    transform: translateY(-1px);
    box-shadow: 0 4px 12px rgba(20, 106, 255, 0.4);
  }

  .bottom-newsletter-btn:hover:not(:disabled)::before {
    left: 100%;
  }

  .bottom-newsletter-btn:active:not(:disabled) {
    transform: translateY(0) scale(0.98);
  }

  .bottom-newsletter-btn:disabled {
    cursor: default;
    opacity: 0.9;
  }

  .bottom-newsletter-btn.success {
    background: linear-gradient(135deg, #10b981 0%, #059669 100%);
    animation: successPulse 0.5s ease;
  }

  .bottom-newsletter-btn.error {
    background: linear-gradient(135deg, #ef4444 0%, #dc2626 100%);
    animation: shake 0.4s ease;
  }

  @keyframes successPulse {
    0%, 100% { transform: scale(1); }
    50% { transform: scale(1.05); }
  }

  @keyframes shake {
    0%, 100% { transform: translateX(0); }
    25% { transform: translateX(-4px); }
    75% { transform: translateX(4px); }
  }

  /* Loading spinner for button */
  .btn-spinner {
    width: 14px;
    height: 14px;
    animation: spin 1s linear infinite;
  }

  @keyframes spin {
    from { transform: rotate(0deg); }
    to { transform: rotate(360deg); }
  }

  .footer-disclaimer {
    max-width: 90rem;
    margin: 0 auto;
    padding: 0 2rem 1.25rem;
  }

  .footer-disclaimer p {
    font-family: 'Poppins', sans-serif;
    font-size: 0.75rem;
    color: rgba(255, 255, 255, 0.35);
    line-height: 1.6;
    max-width: 60rem;
  }

  /* Responsive */
  @media (max-width: 1024px) {
    .footer-grid {
      grid-template-columns: 1fr 1fr;
      gap: 2.5rem;
    }

    .footer-brand {
      grid-column: span 2;
      padding-right: 0;
    }

    .footer-tagline {
      max-width: 100%;
    }
  }

  @media (max-width: 768px) {
    .footer-main {
      padding: 3rem 1.5rem;
    }

    .footer-grid {
      grid-template-columns: 1fr 1fr;
      gap: 2rem;
    }

    .footer-brand {
      grid-column: span 2;
    }

    .footer-bottom-inner {
      flex-direction: column;
      text-align: center;
      gap: 0.75rem;
      padding: 1rem 1.5rem;
    }

    .footer-credits {
      flex-wrap: wrap;
      justify-content: center;
    }

    .footer-legal {
      flex-wrap: wrap;
      justify-content: center;
      gap: 1rem;
    }

    .footer-bottom-newsletter {
      order: -1;
      width: 100%;
      justify-content: center;
    }

    .footer-disclaimer {
      padding: 0 1.5rem 1rem;
      text-align: center;
    }
  }

  @media (max-width: 480px) {
    .footer-grid {
      grid-template-columns: 1fr;
    }

    .footer-brand {
      grid-column: span 1;
    }
  }
</style>

<script>
  // Footer newsletter submission with enhanced animations
  const footerForm = document.getElementById('footer-newsletter');
  if (footerForm) {
    footerForm.addEventListener('submit', async (e) => {
      e.preventDefault();
      const btn = footerForm.querySelector('button') as HTMLButtonElement;
      const input = footerForm.querySelector('input') as HTMLInputElement;
      
      if (btn && input && input.value) {
        const originalHTML = btn.innerHTML;
        
        // Loading state with spinner
        btn.innerHTML = `<svg class="btn-spinner" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5">
          <circle cx="12" cy="12" r="10" opacity="0.25" />
          <path d="M12 2a10 10 0 0 1 10 10" stroke-linecap="round" />
        </svg>`;
        btn.disabled = true;
        input.disabled = true;
        btn.classList.remove('success', 'error');
        
        try {
          const response = await fetch('/api/subscribe', {
            method: 'POST',
            headers: { 'Content-Type': 'application/json' },
            body: JSON.stringify({ 
              email: input.value,
              source: 'footer'
            })
          });
          
          if (response.ok) {
            btn.innerHTML = '✓ Thanks!';
            btn.classList.add('success');
            input.value = '';
            input.placeholder = 'Subscribed!';
            
            // Keep success state
            setTimeout(() => {
              input.placeholder = 'your@email.com';
            }, 3000);
          } else {
            btn.innerHTML = 'Try Again';
            btn.classList.add('error');
            setTimeout(() => {
              btn.innerHTML = originalHTML;
              btn.classList.remove('error');
              btn.disabled = false;
              input.disabled = false;
            }, 2000);
          }
        } catch (error) {
          btn.innerHTML = 'Error';
          btn.classList.add('error');
          setTimeout(() => {
            btn.innerHTML = originalHTML;
            btn.classList.remove('error');
            btn.disabled = false;
            input.disabled = false;
          }, 2000);
        }
      }
    });

    // Add focus/blur animations to input
    const input = footerForm.querySelector('input');
    if (input) {
      input.addEventListener('focus', () => {
        footerForm.classList.add('focused');
      });
      input.addEventListener('blur', () => {
        footerForm.classList.remove('focused');
      });
    }
  }
</script>
