---
/**
 * Breadcrumb Schema - JSON-LD structured data for breadcrumb navigation
 * Improves site navigation display in search results
 */
import { SITE_URL, SITE_TITLE } from '../../consts';

interface BreadcrumbItem {
  name: string;
  url?: string;
}

interface Props {
  items: BreadcrumbItem[];
}

const { items } = Astro.props;

// Always include home as first item
const breadcrumbItems = [
  { name: 'Home', url: SITE_URL },
  ...items
];

const schema = {
  "@context": "https://schema.org",
  "@type": "BreadcrumbList",
  "itemListElement": breadcrumbItems.map((item, index) => {
    const itemUrl = item.url;
    const result: Record<string, any> = {
      "@type": "ListItem",
      "position": index + 1,
      "name": item.name,
    };
    if (itemUrl && typeof itemUrl === 'string') {
      result["item"] = itemUrl.startsWith('http') ? itemUrl : `${SITE_URL}${itemUrl}`;
    }
    return result;
  })
};
---

<script type="application/ld+json" set:html={JSON.stringify(schema)} />









