---
/**
 * Table of Contents Component
 * Auto-generated navigation for long-form content
 */

interface TocItem {
  text: string;
  slug: string;
  level: number;
}

interface Props {
  headings: TocItem[];
  title?: string;
  class?: string;
}

const { headings, title = 'Table of Contents', class: className = '' } = Astro.props;

// Filter to only h2 and h3 headings
const filteredHeadings = headings.filter(h => h.level === 2 || h.level === 3);
---

{filteredHeadings.length > 0 && (
  <nav class={`toc ${className}`} aria-label="Table of contents">
    <details open>
      <summary class="toc-title">
        <svg class="toc-icon" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <line x1="8" y1="6" x2="21" y2="6"></line>
          <line x1="8" y1="12" x2="21" y2="12"></line>
          <line x1="8" y1="18" x2="21" y2="18"></line>
          <line x1="3" y1="6" x2="3.01" y2="6"></line>
          <line x1="3" y1="12" x2="3.01" y2="12"></line>
          <line x1="3" y1="18" x2="3.01" y2="18"></line>
        </svg>
        <span>{title}</span>
      </summary>
      <ol class="toc-list">
        {filteredHeadings.map((heading) => (
          <li class={`toc-item toc-level-${heading.level}`}>
            <a href={`#${heading.slug}`} class="toc-link">
              {heading.text}
            </a>
          </li>
        ))}
      </ol>
    </details>
  </nav>
)}

<style>
  .toc {
    background: #F7F8FA;
    border-radius: 0.5rem;
    padding: 1.25rem;
    margin-bottom: 2rem;
    font-family: 'Poppins', sans-serif;
  }

  .toc-title {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    font-size: 1rem;
    font-weight: 600;
    color: #162433;
    cursor: pointer;
    list-style: none;
  }

  .toc-title::-webkit-details-marker {
    display: none;
  }

  .toc-icon {
    flex-shrink: 0;
    color: #68727C;
  }

  .toc-list {
    margin-top: 1rem;
    padding-left: 0;
    list-style: none;
    counter-reset: toc-counter;
  }

  .toc-item {
    margin-bottom: 0.5rem;
    counter-increment: toc-counter;
  }

  .toc-level-3 {
    padding-left: 1.25rem;
  }

  .toc-link {
    color: #68727C;
    text-decoration: none;
    font-size: 0.9375rem;
    line-height: 1.5;
    display: block;
    padding: 0.25rem 0;
    transition: color 0.2s;
  }

  .toc-link:hover {
    color: #146aff;
  }

  .toc-level-2 > .toc-link {
    font-weight: 500;
    color: #162433;
  }

  .toc-level-2 > .toc-link::before {
    content: counter(toc-counter) ". ";
    color: #68727C;
  }

  @media (max-width: 768px) {
    .toc {
      padding: 1rem;
    }

    .toc-link {
      font-size: 0.875rem;
    }
  }
</style>









