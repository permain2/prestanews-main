  .search-overlay {
    position: absolute;
    inset: 0;
    background: rgba(0, 0, 0, 0.5);
    backdrop-filter: blur(4px);
    animation: fadeIn 0.2s ease;
  }

  .search-container {
    position: relative;
    background: white;
    max-width: 640px;
    width: 100%;
    margin: 80px auto 0;
    border-radius: 16px;
    box-shadow: 0 25px 50px -12px rgba(0, 0, 0, 0.25);
    animation: slideDown 0.3s ease;
    max-height: calc(100vh - 120px);
