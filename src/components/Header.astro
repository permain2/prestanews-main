---
// Screened Header Component - SEO Optimized
import { SITE_TITLE } from '../consts';
---

<header class="bg-white border-b border-gray-200 sticky top-0 z-50" role="banner">
  <a href="#main-content" class="skip-link sr-only focus:not-sr-only focus:absolute focus:top-4 focus:left-4 focus:z-50 focus:bg-white focus:px-4 focus:py-2 focus:text-blue-600">
    Skip to main content
  </a>
  
  <div class="max-w-[90rem] mx-auto px-4 md:px-8">
    <div class="h-16 md:h-[4.5rem] flex items-center justify-between">
      
      <!-- Mobile Menu Button -->
      <button 
        id="mobile-menu-btn" 
        class="md:hidden p-2 -ml-2"
        aria-label="Open mobile menu"
        aria-expanded="false"
        aria-controls="mobile-menu"
      >
        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" class="w-6 h-6" aria-hidden="true">
          <path stroke-linecap="round" stroke-linejoin="round" d="M3.75 6.75h16.5M3.75 12h16.5m-16.5 5.25h16.5" />
        </svg>
      </button>

      <!-- Logo -->
      <a href="/" class="flex items-center" aria-label={`${SITE_TITLE} - Home`}>
        <img 
          src="/templates/Untitled design (16).png" 
          alt={SITE_TITLE}
          class="h-8 md:h-10 w-auto"
          width="160"
          height="40"
          loading="eager"
          decoding="async"
          fetchpriority="high"
        />
      </a>

      <!-- Desktop Navigation -->
      <nav class="hidden md:flex items-center gap-8" role="navigation" aria-label="Main navigation">
        <a href="/credit-cards" class="nav-link font-roboto font-bold text-sm uppercase tracking-wide transition-colors">Credit Cards</a>
        <a href="/insurance" class="nav-link font-roboto font-bold text-sm uppercase tracking-wide transition-colors">Insurance</a>
        <a href="/guides" class="nav-link font-roboto font-bold text-sm uppercase tracking-wide transition-colors">Guides</a>
        <a href="/blog" class="nav-link font-roboto font-bold text-sm uppercase tracking-wide transition-colors">Blog</a>
      </nav>

      <!-- Right Side Actions -->
      <div class="flex items-center gap-4">
        <div class="hidden md:block">
          <a href="/newsletter" class="btn-primary" aria-label="Subscribe to newsletter">
            SUBSCRIBE
          </a>
        </div>
        <button class="p-2" aria-label="Search" type="button">
          <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" class="w-5 h-5" aria-hidden="true">
            <path stroke-linecap="round" stroke-linejoin="round" d="m21 21-5.197-5.197m0 0A7.5 7.5 0 1 0 5.196 5.196a7.5 7.5 0 0 0 10.607 10.607Z" />
          </svg>
        </button>
      </div>
    </div>
  </div>

  <!-- Mobile Menu -->
  <div id="mobile-menu" class="hidden md:hidden bg-white border-t border-gray-200" role="dialog" aria-label="Mobile navigation menu">
    <nav class="px-4 py-4 space-y-4" role="navigation" aria-label="Mobile navigation">
      <a href="/credit-cards" class="block font-roboto font-bold text-sm uppercase tracking-wide" style="color: #000000 !important;">Credit Cards</a>
      <a href="/insurance" class="block font-roboto font-bold text-sm uppercase tracking-wide" style="color: #000000 !important;">Insurance</a>
      <a href="/guides" class="block font-roboto font-bold text-sm uppercase tracking-wide" style="color: #000000 !important;">Guides</a>
      <a href="/blog" class="block font-roboto font-bold text-sm uppercase tracking-wide" style="color: #000000 !important;">Blog</a>
      <a href="/newsletter" class="btn-primary">SUBSCRIBE</a>
    </nav>
  </div>
</header>

<style>
  .nav-link {
    color: #000000 !important;
  }
  .nav-link:hover {
    color: #0D2C4B !important;
  }
</style>

<script>
  const menuBtn = document.getElementById('mobile-menu-btn');
  const mobileMenu = document.getElementById('mobile-menu');
  
  menuBtn?.addEventListener('click', () => {
    mobileMenu?.classList.toggle('hidden');
  });
</script>
