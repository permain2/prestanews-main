---

<MainLayout title="Guides" description="Expert guides for credit cards, insurance, and personal finance.">
  <!-- Interactive Header with Cursor Trail -->
  <CursorTrailGuides client:load />

  <!-- Posts Grid -->
  <section class="posts-section">
    <div class="posts-container">
      <div class="posts-grid">
        {guidesPosts.map(post => (
          <PostCard
            title={post.title}
            description={post.description}
            href={post.href}
            category={post.category}
            image={post.image}
            author={post.author}
            date={post.date}
          />
        ))}
      </div>
    </div>
  </section>
</MainLayout>

<style>
  .collection-header {
    background: #EEF2F6;
    padding: 3.5rem 0;
  }

  .header-container {
    max-width: 76rem;
    margin: 0 auto;
    padding: 0 2rem;
    text-align: center;
  }

  .collection-title {
    font-family: 'Sora', sans-serif;
    font-size: clamp(2rem, 4vw, 3rem);
    font-weight: 700;
    color: #162433;
    margin-bottom: 1rem;
  }

  .collection-description {
    font-family: 'Poppins', sans-serif;
    font-size: 1.125rem;
    line-height: 1.7;
    color: #68727C;
    max-width: 40rem;
    margin: 0 auto;
  }

  .posts-section {
    background: #ffffff;
    padding: 3rem 0 4rem;
  }

  .posts-container {
    max-width: 76rem;
    margin: 0 auto;
    padding: 0 2rem;
  }

  .posts-grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 2rem;
  }

  @media (max-width: 1024px) {
    .posts-grid {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  @media (max-width: 768px) {
    .collection-header {
      padding: 2rem 0;
    }

    .header-container,
    .posts-container {
      padding: 0 1.25rem;
    }

    .posts-grid {
      grid-template-columns: 1fr;
      gap: 1.5rem;
    }
  }
</style>
