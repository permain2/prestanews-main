---
import MainLayout from '../../layouts/MainLayout.astro';

const job = {
  title: "Senior Content Writer - Credit Cards",
  department: "Editorial",
  location: "Remote",
  type: "Full-time",
  salary: "$70,000 - $90,000"
};
---

<MainLayout title={`${job.title} - Careers`} description={`Join PrestaNews as a ${job.title}. ${job.location}, ${job.type}.`}>
  <!-- Header -->
  <section class="job-header">
    <div class="header-container">
      <a href="/careers" class="back-link">
        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" d="M10.5 19.5 3 12m0 0 7.5-7.5M3 12h18" />
        </svg>
        Back to Careers
      </a>
      <h1 class="job-title">{job.title}</h1>
      <div class="job-meta">
        <span class="meta-item">
          <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" d="M2.25 21h19.5m-18-18v18m10.5-18v18m6-13.5V21M6.75 6.75h.75m-.75 3h.75m-.75 3h.75m3-6h.75m-.75 3h.75m-.75 3h.75M6.75 21v-3.375c0-.621.504-1.125 1.125-1.125h2.25c.621 0 1.125.504 1.125 1.125V21M3 3h12m-.75 4.5H21m-3.75 3.75h.008v.008h-.008v-.008Zm0 3h.008v.008h-.008v-.008Zm0 3h.008v.008h-.008v-.008Z" />
          </svg>
          {job.department}
        </span>
        <span class="meta-item">
          <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" d="M15 10.5a3 3 0 1 1-6 0 3 3 0 0 1 6 0Z" />
            <path stroke-linecap="round" stroke-linejoin="round" d="M19.5 10.5c0 7.142-7.5 11.25-7.5 11.25S4.5 17.642 4.5 10.5a7.5 7.5 0 1 1 15 0Z" />
          </svg>
          {job.location}
        </span>
        <span class="meta-item">
          <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" d="M12 6v6h4.5m4.5 0a9 9 0 1 1-18 0 9 9 0 0 1 18 0Z" />
          </svg>
          {job.type}
        </span>
        <span class="meta-item salary">
          <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" d="M12 6v12m-3-2.818.879.659c1.171.879 3.07.879 4.242 0 1.172-.879 1.172-2.303 0-3.182C13.536 12.219 12.768 12 12 12c-.725 0-1.45-.22-2.003-.659-1.106-.879-1.106-2.303 0-3.182s2.9-.879 4.006 0l.415.33M21 12a9 9 0 1 1-18 0 9 9 0 0 1 18 0Z" />
          </svg>
          {job.salary}
        </span>
      </div>
    </div>
  </section>

  <!-- Content -->
  <section class="job-content">
    <div class="content-container">
      <div class="content-main">
        <div class="section">
          <h2>About the Role</h2>
          <p>We're looking for a Senior Content Writer to join our Editorial team and help millions of readers make smarter credit card decisions. You'll create in-depth reviews, comparison guides, and news articles that help our audience understand the complex world of credit cards.</p>
        </div>

        <div class="section">
          <h2>What You'll Do</h2>
          <ul>
            <li>Write comprehensive credit card reviews and comparison guides</li>
            <li>Research and analyze card benefits, rewards programs, and fees</li>
            <li>Stay up-to-date with credit card industry news and trends</li>
            <li>Collaborate with the SEO team to optimize content for search</li>
            <li>Work with editors to maintain our high editorial standards</li>
            <li>Mentor junior writers and provide feedback on their work</li>
          </ul>
        </div>

        <div class="section">
          <h2>What We're Looking For</h2>
          <ul>
            <li>3+ years of experience in financial or personal finance writing</li>
            <li>Deep knowledge of credit cards, rewards programs, and personal finance</li>
            <li>Excellent research and fact-checking skills</li>
            <li>Strong SEO writing skills with proven results</li>
            <li>Ability to explain complex topics in simple, engaging language</li>
            <li>Experience with WordPress or similar CMS</li>
          </ul>
        </div>

        <div class="section">
          <h2>Nice to Have</h2>
          <ul>
            <li>Personal experience with travel hacking or credit card optimization</li>
            <li>Background in journalism or editorial work</li>
            <li>Familiarity with points and miles programs</li>
          </ul>
        </div>

        <div class="section">
          <h2>Benefits</h2>
          <ul>
            <li>Competitive salary ($70,000 - $90,000)</li>
            <li>100% remote work with flexible hours</li>
            <li>Comprehensive health, dental, and vision insurance</li>
            <li>401(k) with company match</li>
            <li>$2,000 annual travel stipend</li>
            <li>$1,000 annual learning budget</li>
            <li>Unlimited PTO</li>
          </ul>
        </div>
      </div>

      <div class="content-sidebar">
        <div class="apply-card" id="apply-card">
          <h3>Interested?</h3>
          <p>Apply now and join our growing team.</p>
          <button type="button" class="btn-primary" id="open-form-btn">
            Apply Now
          </button>
          <p class="apply-note">Or email your resume to<br/><a href="mailto:careers@prestanews.com">careers@prestanews.com</a></p>
        </div>
      </div>
    </div>
  </section>

  <!-- Application Form Modal -->
  <div class="modal-overlay" id="modal-overlay">
    <div class="modal-content">
      <button type="button" class="modal-close" id="close-modal">
        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" d="M6 18 18 6M6 6l12 12" />
        </svg>
      </button>
      
      <div class="modal-header">
        <h2>Apply for {job.title}</h2>
        <p>Fill out the form below and we'll get back to you within 3-5 business days.</p>
      </div>

      <form class="application-form" id="application-form">
        <div class="form-row">
          <div class="form-group">
            <label for="first-name">First Name *</label>
            <input type="text" id="first-name" name="firstName" required />
          </div>
          <div class="form-group">
            <label for="last-name">Last Name *</label>
            <input type="text" id="last-name" name="lastName" required />
          </div>
        </div>

        <div class="form-row">
          <div class="form-group">
            <label for="email">Email Address *</label>
            <input type="email" id="email" name="email" required />
          </div>
          <div class="form-group">
            <label for="phone">Phone Number</label>
            <input type="tel" id="phone" name="phone" />
          </div>
        </div>

        <div class="form-group">
          <label for="linkedin">LinkedIn Profile URL</label>
          <input type="url" id="linkedin" name="linkedin" placeholder="https://linkedin.com/in/yourprofile" />
        </div>

        <div class="form-group">
          <label for="portfolio">Portfolio / Website URL</label>
          <input type="url" id="portfolio" name="portfolio" placeholder="https://yourwebsite.com" />
        </div>

        <div class="form-group">
          <label for="resume">Resume / CV *</label>
          <div class="file-upload">
            <input type="file" id="resume" name="resume" accept=".pdf,.doc,.docx" required />
            <div class="file-upload-display">
              <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" d="M19.5 14.25v-2.625a3.375 3.375 0 0 0-3.375-3.375h-1.5A1.125 1.125 0 0 1 13.5 7.125v-1.5a3.375 3.375 0 0 0-3.375-3.375H8.25m6.75 12-3-3m0 0-3 3m3-3v6m-1.5-15H5.625c-.621 0-1.125.504-1.125 1.125v17.25c0 .621.504 1.125 1.125 1.125h12.75c.621 0 1.125-.504 1.125-1.125V11.25a9 9 0 0 0-9-9Z" />
              </svg>
              <span id="file-name">Click to upload or drag and drop</span>
              <span class="file-types">PDF, DOC, DOCX (Max 5MB)</span>
            </div>
          </div>
        </div>

        <div class="form-group">
          <label for="cover-letter">Cover Letter *</label>
          <textarea id="cover-letter" name="coverLetter" rows="6" required placeholder="Tell us why you're excited about this role and what makes you a great fit..."></textarea>
        </div>

        <div class="form-group">
          <label for="experience">Relevant Experience</label>
          <textarea id="experience" name="experience" rows="4" placeholder="Share any relevant experience in financial writing, personal finance, or credit cards..."></textarea>
        </div>

        <div class="form-group">
          <label for="how-heard">How did you hear about us?</label>
          <select id="how-heard" name="howHeard">
            <option value="">Select an option</option>
            <option value="linkedin">LinkedIn</option>
            <option value="indeed">Indeed</option>
            <option value="glassdoor">Glassdoor</option>
            <option value="website">Company Website</option>
            <option value="referral">Employee Referral</option>
            <option value="other">Other</option>
          </select>
        </div>

        <div class="form-checkbox">
          <input type="checkbox" id="consent" name="consent" required />
          <label for="consent">I consent to PrestaNews storing my data for recruitment purposes. *</label>
        </div>

        <div class="form-actions">
          <button type="button" class="btn-secondary" id="cancel-btn">Cancel</button>
          <button type="submit" class="btn-primary">Submit Application</button>
        </div>
      </form>

      <!-- Success Message -->
      <div class="success-message" id="success-message">
        <div class="success-icon">
          <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" d="M9 12.75 11.25 15 15 9.75M21 12a9 9 0 1 1-18 0 9 9 0 0 1 18 0Z" />
          </svg>
        </div>
        <h3>Application Submitted!</h3>
        <p>Thank you for your interest in joining PrestaNews. We'll review your application and get back to you within 3-5 business days.</p>
        <button type="button" class="btn-primary" id="close-success">Close</button>
      </div>
    </div>
  </div>
</MainLayout>

<style>
  .job-header {
    background: linear-gradient(135deg, #0D2C4B 0%, #1A4A7A 100%);
    padding: 3rem 0;
  }

  .header-container {
    max-width: 64rem;
    margin: 0 auto;
    padding: 0 2rem;
  }

  .back-link {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    color: rgba(255, 255, 255, 0.7);
    text-decoration: none;
    font-size: 0.875rem;
    margin-bottom: 1.5rem;
    transition: color 0.2s ease;
  }

  .back-link:hover {
    color: white;
  }

  .back-link svg {
    width: 1rem;
    height: 1rem;
  }

  .job-title {
    font-family: 'Sora', sans-serif;
    font-size: clamp(1.75rem, 4vw, 2.5rem);
    font-weight: 700;
    color: white !important;
    margin-bottom: 1.5rem;
  }

  .job-meta {
    display: flex;
    flex-wrap: wrap;
    gap: 1.5rem;
  }

  .meta-item {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    color: rgba(255, 255, 255, 0.8);
    font-size: 0.9375rem;
  }

  .meta-item svg {
    width: 1.25rem;
    height: 1.25rem;
  }

  .meta-item.salary {
    background: rgba(255, 255, 255, 0.15);
    padding: 0.375rem 0.75rem;
    border-radius: 0.5rem;
  }

  .job-content {
    padding: 3rem 0 4rem;
    background: #F7F8FA;
  }

  .content-container {
    max-width: 64rem;
    margin: 0 auto;
    padding: 0 2rem;
    display: grid;
    grid-template-columns: 1fr 20rem;
    gap: 3rem;
  }

  .content-main {
    background: white;
    border-radius: 1rem;
    padding: 2.5rem;
    border: 1px solid #E6E8EB;
  }

  .section {
    margin-bottom: 2.5rem;
  }

  .section:last-child {
    margin-bottom: 0;
  }

  .section h2 {
    font-family: 'Sora', sans-serif;
    font-size: 1.25rem;
    font-weight: 700;
    color: #162433;
    margin-bottom: 1rem;
  }

  .section p {
    font-family: 'Poppins', sans-serif;
    font-size: 1rem;
    line-height: 1.7;
    color: #68727C;
  }

  .section ul {
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .section ul li {
    font-family: 'Poppins', sans-serif;
    font-size: 1rem;
    line-height: 1.7;
    color: #68727C;
    padding-left: 1.75rem;
    position: relative;
    margin-bottom: 0.5rem;
  }

  .section ul li::before {
    content: "";
    position: absolute;
    left: 0;
    top: 0.625rem;
    width: 0.5rem;
    height: 0.5rem;
    background: #0D2C4B;
    border-radius: 50%;
  }

  .content-sidebar {
    position: sticky;
    top: 6rem;
    height: fit-content;
  }

  .apply-card {
    background: white;
    border-radius: 1rem;
    padding: 2rem;
    border: 1px solid #E6E8EB;
    text-align: center;
  }

  .apply-card h3 {
    font-family: 'Sora', sans-serif;
    font-size: 1.25rem;
    font-weight: 700;
    color: #162433;
    margin-bottom: 0.5rem;
  }

  .apply-card > p {
    font-family: 'Poppins', sans-serif;
    color: #68727C;
    margin-bottom: 1.5rem;
  }

  .apply-card .btn-primary {
    width: 100%;
    display: block;
    text-align: center;
    margin-bottom: 1rem;
    cursor: pointer;
  }

  .apply-note {
    font-size: 0.875rem;
    color: #68727C;
    line-height: 1.5;
  }

  .apply-note a {
    color: #3B82F6;
  }

  /* Modal Styles */
  .modal-overlay {
    position: fixed;
    inset: 0;
    background: rgba(0, 0, 0, 0.6);
    backdrop-filter: blur(4px);
    z-index: 1000;
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 2rem;
    opacity: 0;
    visibility: hidden;
    transition: opacity 0.3s ease, visibility 0.3s ease;
  }

  .modal-overlay.active {
    opacity: 1;
    visibility: visible;
  }

  .modal-content {
    background: white;
    border-radius: 1rem;
    max-width: 40rem;
    width: 100%;
    max-height: 90vh;
    overflow-y: auto;
    padding: 2.5rem;
    position: relative;
    transform: translateY(20px);
    transition: transform 0.3s ease;
  }

  .modal-overlay.active .modal-content {
    transform: translateY(0);
  }

  .modal-close {
    position: absolute;
    top: 1.5rem;
    right: 1.5rem;
    width: 2.5rem;
    height: 2.5rem;
    border: none;
    background: #F7F8FA;
    border-radius: 50%;
    cursor: pointer;
    display: flex;
    align-items: center;
    justify-content: center;
    transition: background 0.2s ease;
  }

  .modal-close:hover {
    background: #E6E8EB;
  }

  .modal-close svg {
    width: 1.25rem;
    height: 1.25rem;
    color: #68727C;
  }

  .modal-header {
    margin-bottom: 2rem;
  }

  .modal-header h2 {
    font-family: 'Sora', sans-serif;
    font-size: 1.5rem;
    font-weight: 700;
    color: #162433;
    margin-bottom: 0.5rem;
  }

  .modal-header p {
    font-family: 'Poppins', sans-serif;
    color: #68727C;
    font-size: 0.9375rem;
  }

  .application-form {
    display: flex;
    flex-direction: column;
    gap: 1.25rem;
  }

  .form-row {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 1rem;
  }

  .form-group {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
  }

  .form-group label {
    font-family: 'Poppins', sans-serif;
    font-size: 0.875rem;
    font-weight: 500;
    color: #162433;
  }

  .form-group input,
  .form-group textarea,
  .form-group select {
    font-family: 'Poppins', sans-serif;
    font-size: 0.9375rem;
    padding: 0.75rem 1rem;
    border: 1px solid #E6E8EB;
    border-radius: 0.5rem;
    transition: border-color 0.2s ease, box-shadow 0.2s ease;
  }

  .form-group input:focus,
  .form-group textarea:focus,
  .form-group select:focus {
    outline: none;
    border-color: #3B82F6;
    box-shadow: 0 0 0 3px rgba(59, 130, 246, 0.1);
  }

  .form-group textarea {
    resize: vertical;
    min-height: 100px;
  }

  .file-upload {
    position: relative;
  }

  .file-upload input[type="file"] {
    position: absolute;
    inset: 0;
    opacity: 0;
    cursor: pointer;
  }

  .file-upload-display {
    border: 2px dashed #E6E8EB;
    border-radius: 0.5rem;
    padding: 2rem;
    text-align: center;
    transition: border-color 0.2s ease, background 0.2s ease;
  }

  .file-upload:hover .file-upload-display {
    border-color: #3B82F6;
    background: #F0F7FF;
  }

  .file-upload-display svg {
    width: 2.5rem;
    height: 2.5rem;
    color: #68727C;
    margin-bottom: 0.75rem;
  }

  .file-upload-display span {
    display: block;
    font-family: 'Poppins', sans-serif;
    font-size: 0.9375rem;
    color: #68727C;
  }

  .file-upload-display .file-types {
    font-size: 0.75rem;
    color: #9CA3AF;
    margin-top: 0.25rem;
  }

  .form-checkbox {
    display: flex;
    align-items: flex-start;
    gap: 0.75rem;
  }

  .form-checkbox input {
    width: 1.25rem;
    height: 1.25rem;
    margin-top: 0.125rem;
    accent-color: #0D2C4B;
  }

  .form-checkbox label {
    font-family: 'Poppins', sans-serif;
    font-size: 0.875rem;
    color: #68727C;
    line-height: 1.5;
  }

  .form-actions {
    display: flex;
    gap: 1rem;
    margin-top: 1rem;
    padding-top: 1.5rem;
    border-top: 1px solid #E6E8EB;
  }

  .btn-secondary {
    flex: 1;
    padding: 0.875rem 1.5rem;
    font-family: 'Poppins', sans-serif;
    font-size: 0.9375rem;
    font-weight: 600;
    border: 1px solid #E6E8EB;
    background: white;
    color: #68727C;
    border-radius: 0.5rem;
    cursor: pointer;
    transition: all 0.2s ease;
  }

  .btn-secondary:hover {
    border-color: #D5D9DD;
    background: #F7F8FA;
  }

  .form-actions .btn-primary {
    flex: 1;
  }

  /* Success Message */
  .success-message {
    display: none;
    text-align: center;
    padding: 2rem 0;
  }

  .success-message.active {
    display: block;
  }

  .application-form.hidden {
    display: none;
  }

  .modal-header.hidden {
    display: none;
  }

  .success-icon {
    width: 4rem;
    height: 4rem;
    margin: 0 auto 1.5rem;
    background: #ECFDF5;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .success-icon svg {
    width: 2.5rem;
    height: 2.5rem;
    color: #10B981;
  }

  .success-message h3 {
    font-family: 'Sora', sans-serif;
    font-size: 1.5rem;
    font-weight: 700;
    color: #162433;
    margin-bottom: 0.75rem;
  }

  .success-message p {
    font-family: 'Poppins', sans-serif;
    color: #68727C;
    margin-bottom: 2rem;
    line-height: 1.6;
  }

  @media (max-width: 900px) {
    .content-container {
      grid-template-columns: 1fr;
    }

    .content-sidebar {
      position: static;
    }
  }

  @media (max-width: 640px) {
    .header-container,
    .content-container {
      padding: 0 1.25rem;
    }

    .content-main {
      padding: 1.5rem;
    }

    .modal-content {
      padding: 1.5rem;
    }

    .form-row {
      grid-template-columns: 1fr;
    }

    .form-actions {
      flex-direction: column-reverse;
    }
  }
</style>

<script>
  // Modal functionality
  const modalOverlay = document.getElementById('modal-overlay');
  const openFormBtn = document.getElementById('open-form-btn');
  const closeModalBtn = document.getElementById('close-modal');
  const cancelBtn = document.getElementById('cancel-btn');
  const applicationForm = document.getElementById('application-form');
  const successMessage = document.getElementById('success-message');
  const closeSuccessBtn = document.getElementById('close-success');
  const modalHeader = document.querySelector('.modal-header');
  const fileInput = document.getElementById('resume');
  const fileNameDisplay = document.getElementById('file-name');

  // Open modal
  openFormBtn?.addEventListener('click', () => {
    modalOverlay?.classList.add('active');
    document.body.style.overflow = 'hidden';
  });

  // Close modal functions
  function closeModal() {
    modalOverlay?.classList.remove('active');
    document.body.style.overflow = '';
    
    // Reset form after closing
    setTimeout(() => {
      applicationForm?.classList.remove('hidden');
      modalHeader?.classList.remove('hidden');
      successMessage?.classList.remove('active');
      applicationForm?.reset();
      if (fileNameDisplay) {
        fileNameDisplay.textContent = 'Click to upload or drag and drop';
      }
    }, 300);
  }

  closeModalBtn?.addEventListener('click', closeModal);
  cancelBtn?.addEventListener('click', closeModal);
  closeSuccessBtn?.addEventListener('click', closeModal);

  // Close on overlay click
  modalOverlay?.addEventListener('click', (e) => {
    if (e.target === modalOverlay) {
      closeModal();
    }
  });

  // Close on escape key
  document.addEventListener('keydown', (e) => {
    if (e.key === 'Escape' && modalOverlay?.classList.contains('active')) {
      closeModal();
    }
  });

  // File name display
  fileInput?.addEventListener('change', (e) => {
    const target = e.target as HTMLInputElement;
    const file = target.files?.[0];
    if (file && fileNameDisplay) {
      fileNameDisplay.textContent = file.name;
    }
  });

  // Form submission
  applicationForm?.addEventListener('submit', (e) => {
    e.preventDefault();
    
    // Simulate form submission
    const submitBtn = applicationForm.querySelector('button[type="submit"]');
    if (submitBtn) {
      submitBtn.textContent = 'Submitting...';
      (submitBtn as HTMLButtonElement).disabled = true;
    }

    // Simulate API call delay
    setTimeout(() => {
      applicationForm?.classList.add('hidden');
      modalHeader?.classList.add('hidden');
      successMessage?.classList.add('active');
