---
import MainLayout from '../layouts/MainLayout.astro';
import { getCollection } from 'astro:content';
import HeroTypewriter from '../components/HeroTypewriter.tsx';
import OrganizationSchema from '../components/seo/OrganizationSchema.astro';
import WebsiteSchema from '../components/seo/WebsiteSchema.astro';
import { SITE_TITLE, SITE_DESCRIPTION } from '../consts';

// Get latest articles
const allPosts = await getCollection('blog');
const latestPosts = allPosts.sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf()).slice(0, 8);
const featuredPost = latestPosts[0];
const sidePosts = latestPosts.slice(1, 4);

// Team for featured authors
const authors = [
  { name: "Sarah Chen", role: "Editor-in-Chief", image: "/team/sarah-chen.jpg", slug: "sarah-chen" },
  { name: "Michael Rodriguez", role: "Senior Credit Card Analyst", image: "/team/michael-rodriguez.jpg", slug: "michael-rodriguez" },
  { name: "Emily Johnson", role: "Insurance Editor", image: "/team/emily-johnson.jpg", slug: "emily-johnson" },
];
---

<MainLayout title={SITE_TITLE} description={SITE_DESCRIPTION}>
  <!-- Homepage-specific structured data -->
  <OrganizationSchema />
  <WebsiteSchema />
  
  <!-- Hero Section -->
  <section class="hero-section">
    <div class="hero-container">
      <div class="hero-content">
        <HeroTypewriter 
          client:load 
          words={["Financial", "Insurance", "Credit", "Investment", "Money"]} 
        />
        <p class="hero-subtitle">
          Expert reviews and unbiased comparisons on credit cards, insurance, and personal finance — helping you save money and choose with confidence.
        </p>
      </div>
    </div>
  </section>

  <!-- Quick Links Pills -->
  <section class="quick-links-section">
    <div class="quick-links-container">
      <div class="quick-links-scroll">
        <a href="/credit-cards" class="quick-link-pill">
          <svg class="pill-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <rect x="1" y="4" width="22" height="16" rx="2" ry="2"></rect>
            <line x1="1" y1="10" x2="23" y2="10"></line>
          </svg>
          Credit Cards
        </a>
        <a href="/insurance" class="quick-link-pill">
          <svg class="pill-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <path d="M12 22s8-4 8-10V5l-8-3-8 3v7c0 6 8 10 8 10z"></path>
          </svg>
          Insurance
        </a>
        <a href="/finance" class="quick-link-pill">
          <svg class="pill-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <line x1="12" y1="1" x2="12" y2="23"></line>
            <path d="M17 5H9.5a3.5 3.5 0 0 0 0 7h5a3.5 3.5 0 0 1 0 7H6"></path>
          </svg>
          Finance
        </a>
        <a href="/home" class="quick-link-pill">
          <svg class="pill-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <path d="M3 9l9-7 9 7v11a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2z"></path>
            <polyline points="9 22 9 12 15 12 15 22"></polyline>
          </svg>
          Home
        </a>
        <a href="/insurance/pet" class="quick-link-pill">
          <svg class="pill-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <path d="M10 5.172C10 3.782 8.423 2.679 6.5 3c-2.823.47-4.113 6.006-4 7 .08.703 1.725 1.722 3.656 1 1.261-.472 1.96-1.45 2.344-2.5"></path>
            <path d="M14.267 5.172c0-1.39 1.577-2.493 3.5-2.172 2.823.47 4.113 6.006 4 7-.08.703-1.725 1.722-3.656 1-1.261-.472-1.855-1.45-2.239-2.5"></path>
            <path d="M8 14v.5"></path>
            <path d="M16 14v.5"></path>
            <path d="M11.25 16.25h1.5L12 17l-.75-.75z"></path>
            <path d="M4.42 11.247A13.152 13.152 0 0 0 4 14.556C4 18.728 7.582 21 12 21s8-2.272 8-6.444c0-1.061-.162-2.2-.493-3.309m-9.243-6.082A8.801 8.801 0 0 1 12 5c.78 0 1.5.108 2.161.306"></path>
          </svg>
          Pet Insurance
        </a>
        <a href="/finance/best-online-savings-accounts" class="quick-link-pill">
          <svg class="pill-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <rect x="3" y="3" width="18" height="18" rx="2" ry="2"></rect>
            <line x1="3" y1="9" x2="21" y2="9"></line>
            <line x1="9" y1="21" x2="9" y2="9"></line>
          </svg>
          Savings Accounts
        </a>
        <a href="/home/best-home-warranties" class="quick-link-pill">
          <svg class="pill-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <path d="M22 11.08V12a10 10 0 1 1-5.93-9.14"></path>
            <polyline points="22 4 12 14.01 9 11.01"></polyline>
          </svg>
          Home Warranties
        </a>
        <a href="/blog" class="quick-link-pill">
          <svg class="pill-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <path d="M14 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V8z"></path>
            <polyline points="14 2 14 8 20 8"></polyline>
            <line x1="16" y1="13" x2="8" y2="13"></line>
            <line x1="16" y1="17" x2="8" y2="17"></line>
          </svg>
          All Guides
        </a>
      </div>
    </div>
  </section>

  <!-- Breaking News / Featured Articles -->
  <section class="breaking-section">
    <div class="breaking-container">
      <h2 class="section-title">Latest Financial News & Insights</h2>
      
      <div class="breaking-grid">
        <!-- Featured Article -->
        {featuredPost && (
          <a href={`/blog/${featuredPost.id}`} class="featured-article">
            <div class="featured-image-wrap">
              {featuredPost.data.heroImage && (
                <img src={featuredPost.data.heroImage} alt={featuredPost.data.title} class="featured-img" />
              )}
              <div class="featured-overlay"></div>
            </div>
            <div class="featured-content">
              <span class="article-category">FEATURED</span>
              <h3 class="featured-title">{featuredPost.data.title}</h3>
              <div class="featured-meta">
                <span class="meta-date">{featuredPost.data.pubDate.toLocaleDateString('en-US', { month: 'short', day: 'numeric', year: 'numeric' })}</span>
                <span class="meta-arrow">
                  <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <circle cx="12" cy="12" r="10"></circle>
                    <path d="M12 8l4 4-4 4"></path>
                    <line x1="8" y1="12" x2="16" y2="12"></line>
                  </svg>
                </span>
              </div>
            </div>
          </a>
        )}

        <!-- Side Articles -->
        <div class="side-articles">
          {sidePosts.map((post) => (
            <a href={`/blog/${post.id}`} class="side-article">
              <div class="side-article-content">
                <span class="article-category-small">NEWS</span>
                <h4 class="side-article-title">{post.data.title}</h4>
                <span class="side-article-date">{post.data.pubDate.toLocaleDateString('en-US', { month: 'short', day: 'numeric' })}</span>
              </div>
              {post.data.heroImage && (
                <div class="side-article-image">
                  <img src={post.data.heroImage} alt={post.data.title} />
                </div>
              )}
            </a>
          ))}
        </div>
      </div>
    </div>
  </section>

  <!-- Top Credit Card Offers -->
  <section class="offers-section">
    <div class="offers-container">
      <h2 class="offers-title">Great offers from our partners</h2>
      
      <div class="offers-grid">
        <!-- Card 1 -->
        <div class="offer-card">
          <div class="offer-badge">Best for Travel</div>
          <div class="offer-card-image">
            <img src="/credit-cards/chase-sapphire-preferred.png" alt="Chase Sapphire Preferred" />
          </div>
          <div class="offer-content">
            <h3 class="offer-name">Chase Sapphire Preferred®</h3>
            <p class="offer-description">Earn 75,000 bonus points after qualifying spend.</p>
            <div class="offer-highlight">
              <span class="highlight-number">75,000</span>
              <span class="highlight-label">bonus points</span>
            </div>
            <a href="https://www.chase.com/personal/credit-cards/sapphire/sapphire-preferred?utm_source=prestanews&utm_medium=affiliate" class="offer-cta" target="_blank" rel="noopener noreferrer">Apply Now</a>
          </div>
        </div>

        <!-- Card 2 -->
        <div class="offer-card">
          <div class="offer-badge">Best for Miles</div>
          <div class="offer-card-image">
            <img src="/credit-cards/capital-one-venture-x.png" alt="Capital One Venture X" />
          </div>
          <div class="offer-content">
            <h3 class="offer-name">Capital One Venture X</h3>
            <p class="offer-description">Earn 100,000 bonus miles with limited-time offer.</p>
            <div class="offer-highlight">
              <span class="highlight-number">100,000</span>
              <span class="highlight-label">bonus miles</span>
            </div>
            <a href="https://www.capitalone.com/credit-cards/venture-x/?utm_source=prestanews&utm_medium=affiliate" class="offer-cta" target="_blank" rel="noopener noreferrer">Apply Now</a>
          </div>
        </div>

        <!-- Card 3 -->
        <div class="offer-card">
          <div class="offer-badge">Best for Cash Back</div>
          <div class="offer-card-image">
            <img src="/credit-cards/citi-double-cash.png" alt="Citi Double Cash" />
          </div>
          <div class="offer-content">
            <h3 class="offer-name">Citi Double Cash® Card</h3>
            <p class="offer-description">Earn 2% cash back on every purchase, everywhere.</p>
            <div class="offer-highlight">
              <span class="highlight-number">2%</span>
              <span class="highlight-label">unlimited cash back</span>
            </div>
            <a href="https://www.citi.com/credit-cards/citi-double-cash-credit-card?utm_source=prestanews&utm_medium=affiliate" class="offer-cta" target="_blank" rel="noopener noreferrer">Apply Now</a>
          </div>
        </div>
      </div>

      <div class="offers-footer">
        <a href="/credit-cards" class="see-all-btn">See All Credit Cards →</a>
      </div>
    </div>
  </section>

  <!-- Explore Categories - Premium Editorial Style -->
  <section class="categories-section">
    <div class="categories-container">
      <div class="categories-header">
        <span class="categories-label">EXPLORE</span>
        <h2 class="categories-title">Our Coverage</h2>
      </div>
      
      <div class="categories-grid">
        <a href="/credit-cards" class="category-card">
          <div class="category-number">01</div>
          <div class="category-content">
            <h3>Credit Cards</h3>
            <p>Expert reviews on travel rewards, cash back, business & premium cards</p>
            <div class="category-links">
              <span>Travel</span>
              <span>Cash Back</span>
              <span>Business</span>
            </div>
          </div>
          <div class="category-cta">
            <span>Explore</span>
            <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M5 12h14M12 5l7 7-7 7"/></svg>
          </div>
        </a>

        <a href="/insurance" class="category-card">
          <div class="category-number">02</div>
          <div class="category-content">
            <h3>Insurance</h3>
            <p>Comprehensive guides for auto, home, pet, life & renters coverage</p>
            <div class="category-links">
              <span>Auto</span>
              <span>Home</span>
              <span>Pet</span>
              <span>Life</span>
            </div>
          </div>
          <div class="category-cta">
            <span>Explore</span>
            <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M5 12h14M12 5l7 7-7 7"/></svg>
          </div>
        </a>

        <a href="/finance" class="category-card">
          <div class="category-number">03</div>
          <div class="category-content">
            <h3>Finance</h3>
            <p>High-yield savings, loans, refinancing & investment strategies</p>
            <div class="category-links">
              <span>Savings</span>
              <span>Loans</span>
              <span>Investing</span>
            </div>
          </div>
          <div class="category-cta">
            <span>Explore</span>
            <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M5 12h14M12 5l7 7-7 7"/></svg>
          </div>
        </a>

        <a href="/home" class="category-card">
          <div class="category-number">04</div>
          <div class="category-content">
            <h3>Home Services</h3>
            <p>Warranties, security systems, internet providers & moving</p>
            <div class="category-links">
              <span>Warranty</span>
              <span>Security</span>
              <span>Internet</span>
            </div>
          </div>
          <div class="category-cta">
            <span>Explore</span>
            <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M5 12h14M12 5l7 7-7 7"/></svg>
          </div>
        </a>

        <a href="/software/best-vpn-services" class="category-card">
          <div class="category-number">05</div>
          <div class="category-content">
            <h3>Software</h3>
            <p>VPN services, security tools & productivity software reviews</p>
            <div class="category-links">
              <span>VPN</span>
              <span>Security</span>
              <span>Tools</span>
            </div>
          </div>
          <div class="category-cta">
            <span>Explore</span>
            <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M5 12h14M12 5l7 7-7 7"/></svg>
          </div>
        </a>

        <a href="/blog" class="category-card category-highlight">
          <div class="category-number">→</div>
          <div class="category-content">
            <h3>All Guides</h3>
            <p>Browse our complete library of expert reviews and comparisons</p>
            <div class="category-links">
              <span>150+ Articles</span>
            </div>
          </div>
          <div class="category-cta">
            <span>View All</span>
            <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M5 12h14M12 5l7 7-7 7"/></svg>
          </div>
        </a>
      </div>
    </div>
  </section>

  <!-- Popular Comparisons - Premium Editorial -->
  <section class="comparisons-section">
    <div class="comparisons-container">
      <div class="comparisons-header">
        <div class="header-line"></div>
        <h2 class="comparisons-title">Most Read</h2>
      </div>
      
      <div class="comparisons-list">
        <a href="/credit-cards/best-travel-cards" class="comparison-item">
          <span class="item-rank">01</span>
          <div class="item-content">
            <span class="item-category">Credit Cards</span>
            <h3>Best Travel Credit Cards of 2025</h3>
          </div>
          <svg class="item-arrow" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5"><path d="M5 12h14M12 5l7 7-7 7"/></svg>
        </a>

        <a href="/insurance/pet" class="comparison-item">
          <span class="item-rank">02</span>
          <div class="item-content">
            <span class="item-category">Insurance</span>
            <h3>Best Pet Insurance Companies</h3>
          </div>
          <svg class="item-arrow" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5"><path d="M5 12h14M12 5l7 7-7 7"/></svg>
        </a>

        <a href="/finance/best-online-savings-accounts" class="comparison-item">
          <span class="item-rank">03</span>
          <div class="item-content">
            <span class="item-category">Finance</span>
            <h3>Best High-Yield Savings Accounts</h3>
          </div>
          <svg class="item-arrow" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5"><path d="M5 12h14M12 5l7 7-7 7"/></svg>
        </a>

        <a href="/home/best-home-warranties" class="comparison-item">
          <span class="item-rank">04</span>
          <div class="item-content">
            <span class="item-category">Home</span>
            <h3>Best Home Warranty Companies</h3>
          </div>
          <svg class="item-arrow" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5"><path d="M5 12h14M12 5l7 7-7 7"/></svg>
        </a>

        <a href="/software/best-vpn-services" class="comparison-item">
          <span class="item-rank">05</span>
          <div class="item-content">
            <span class="item-category">Software</span>
            <h3>Best VPN Services</h3>
          </div>
          <svg class="item-arrow" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5"><path d="M5 12h14M12 5l7 7-7 7"/></svg>
        </a>

        <a href="/insurance/car" class="comparison-item">
          <span class="item-rank">06</span>
          <div class="item-content">
            <span class="item-category">Insurance</span>
            <h3>Best Car Insurance Companies</h3>
          </div>
          <svg class="item-arrow" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5"><path d="M5 12h14M12 5l7 7-7 7"/></svg>
        </a>
      </div>
    </div>
  </section>

  <!-- Latest Articles Grid -->
  <section class="latest-section">
    <div class="latest-container">
      <div class="latest-header">
        <h2 class="latest-title">Latest Articles</h2>
        <a href="/blog" class="view-all-link">View All →</a>
      </div>

      <div class="latest-grid">
        {latestPosts.slice(0, 8).map((post) => (
          <a href={`/blog/${post.id}`} class="latest-card">
            <div class="latest-card-image">
              <img src={post.data.heroImage || '/blog-images/default-article.jpg'} alt={post.data.title} loading="lazy" />
            </div>
            <div class="latest-card-content">
              <span class="latest-category">{post.data.tags?.[0] || 'News'}</span>
              <h3 class="latest-card-title">{post.data.title}</h3>
              <p class="latest-card-excerpt">{post.data.description}</p>
              {post.data.author && (
                <div class="latest-card-author">
                  {post.data.authorImage && (
                    <img src={post.data.authorImage} alt={post.data.author} class="author-avatar" />
                  )}
                  <span class="author-name">{post.data.author}</span>
                </div>
              )}
            </div>
          </a>
        ))}
      </div>
    </div>
  </section>

  <!-- Featured Authors Section -->
  <section class="authors-section">
    <div class="authors-container">
      <h2 class="authors-title">Meet Our Experts</h2>
      <p class="authors-subtitle">Industry professionals dedicated to helping you make smarter financial decisions</p>
      
      <div class="authors-grid">
        {authors.map((author) => (
          <div class="author-card">
            <div class="author-image">
              <img src={author.image} alt={author.name} loading="lazy" />
            </div>
            <div class="author-info">
              <h3 class="author-card-name">{author.name}</h3>
              <p class="author-card-role">{author.role}</p>
            </div>
          </div>
        ))}
      </div>

      <div class="authors-cta">
        <a href="/about" class="meet-team-btn">Meet the Full Team →</a>
      </div>
    </div>
  </section>

</MainLayout>

<style>
  /* Hero Section */
  .hero-section {
    background: linear-gradient(180deg, #ffffff 0%, #F7F8FA 100%);
    padding: 4rem 0 2rem;
    position: relative;
    overflow: hidden;
  }

  .hero-section::before {
    content: '';
    position: absolute;
    top: 0;
    right: 0;
    width: 60%;
