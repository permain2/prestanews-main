              {/* Rank Badge */}
              <div class="absolute top-4 left-4 flex items-center gap-2">
                <span class="w-10 h-10 rounded-full bg-[#0D2C4B] text-white flex items-center justify-center font-bold shadow-lg">#{index + 1}</span>
              </div>
              
              <!-- Provider Logo -->
              <div class="card-image-wrapper relative mt-8 mb-6">
                <div class="w-48 h-32 rounded-xl relative overflow-hidden flex items-center justify-center bg-white p-4 shadow-2xl group-hover:scale-105 transition-all duration-500" style="box-shadow: 0 4px 24px rgba(0,0,0,0.1);">
                  <img 
                    src={provider.logo} 
                    alt={`${provider.name} logo`} 
                    class="max-w-full max-h-full object-contain"
                    loading={index < 3 ? "eager" : "lazy"}
                    onerror={`this.onerror=null; this.parentElement.innerHTML='<div class="w-full h-full flex items-center justify-center bg-gradient-to-br from-[#0D2C4B] to-[#1a4a7a] rounded-lg"><span class="text-white font-bold text-center px-2 text-sm">${provider.name}</span></div>'`}
