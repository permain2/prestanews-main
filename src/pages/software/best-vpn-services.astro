              <div class="flex flex-col md:flex-row gap-6">
                <!-- Logo & Rating -->
                <div class="flex flex-col items-center md:w-48 shrink-0">
                  <div class="w-24 h-24 bg-gray-50 rounded-xl flex items-center justify-center p-3 mb-3">
                    <img src={vpn.logo} alt={vpn.name} class="max-w-full max-h-full object-contain" loading="lazy" />
                  </div>
                  <h3 class="font-sora font-bold text-lg text-[#162433] text-center">{vpn.name}</h3>
                  <div class="flex items-center gap-1 mt-1">
                    <span class="text-yellow-500">★</span>
                    <span class="font-bold text-[#162433]">{vpn.rating}</span>
                    <span class="text-[#68727C] text-sm">/5</span>
                  </div>
                  <span class="text-xs text-[#0066B2] font-medium mt-1">{vpn.bestFor}</span>
                </div>

                <!-- Details -->
                <div class="flex-1">
                  <div class="grid grid-cols-2 md:grid-cols-4 gap-3 mb-4">
                    <div class="bg-gray-50 rounded-lg p-3 text-center">
                      <p class="text-xs text-[#68727C] uppercase tracking-wide">Price</p>
                      <p class="font-bold text-[#162433]">{vpn.monthlyPrice}</p>
                    </div>
                    <div class="bg-gray-50 rounded-lg p-3 text-center">
                      <p class="text-xs text-[#68727C] uppercase tracking-wide">Servers</p>
                      <p class="font-bold text-[#162433] text-sm">{vpn.servers}</p>
                    </div>
                    <div class="bg-gray-50 rounded-lg p-3 text-center">
                      <p class="text-xs text-[#68727C] uppercase tracking-wide">Countries</p>
                      <p class="font-bold text-[#162433]">{vpn.countries}</p>
                    </div>
                    <div class="bg-gray-50 rounded-lg p-3 text-center">
                      <p class="text-xs text-[#68727C] uppercase tracking-wide">Devices</p>
