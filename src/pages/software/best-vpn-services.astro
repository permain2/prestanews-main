                        {vpn.cons.map(con => (
                          <li class="text-sm text-[#162433] flex items-start gap-2">
                            <span class="text-red-500 mt-0.5">•</span>
                            {con}
                          </li>
                        ))}
                      </ul>
                    </div>
                  </div>

                  <!-- CTA Button -->
                  <a href="#" class="inline-flex items-center justify-center gap-2 w-full md:w-auto bg-gradient-to-r from-[#0066B2] to-[#004C8C] hover:from-[#004C8C] hover:to-[#003366] text-white font-bold py-3 px-8 rounded-lg transition-all shadow-lg hover:shadow-xl transform hover:-translate-y-0.5 text-sm uppercase tracking-wide">
                    <span>Visit {vpn.name}</span>
                    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 5l7 7m0 0l-7 7m7-7H3"/></svg>
                  </a>
                </div>
              </div>

              <!-- Bottom Line (Expandable) -->
              <details class="mt-4 border-t border-gray-100 pt-4">
                <summary class="cursor-pointer text-[#0066B2] font-medium text-sm hover:underline">Read full review →</summary>
                <div class="mt-3 space-y-3">
                  <p class="text-[#162433] text-sm"><strong>Bottom Line:</strong> {vpn.bottomLine}</p>
                  <div>
                    <p class="text-xs font-bold text-[#162433] uppercase tracking-wide mb-2">Key Features:</p>
                    <ul class="grid md:grid-cols-2 gap-1">
                      {vpn.features.map(feature => (
                        <li class="text-sm text-[#68727C] flex items-start gap-2">
                          <span class="text-[#0066B2]">✓</span>
                          {feature}
                        </li>
                      ))}
                    </ul>
                  </div>
                </div>
              </details>
            </div>
          </div>
