---
import MainLayout from '../../layouts/MainLayout.astro';

const hotelBrands = [
  { name: "Marriott Bonvoy", logo: "M", color: "#A5001E", articles: 35 },
  { name: "Hilton Honors", logo: "H", color: "#003B5C", articles: 28 },
  { name: "World of Hyatt", logo: "WH", color: "#A18B6E", articles: 22 },
  { name: "IHG One Rewards", logo: "IHG", color: "#006D77", articles: 18 },
  { name: "Wyndham Rewards", logo: "W", color: "#0055A4", articles: 12 },
  { name: "Choice Privileges", logo: "C", color: "#003366", articles: 10 }
];

const articles = [
  {
    title: "Marriott Bonvoy Complete Guide: Earning & Redeeming Points",
    excerpt: "Master the world's largest hotel loyalty program with our comprehensive guide.",
    category: "Loyalty Programs",
    date: "Dec 9, 2025",
    readTime: "15 min"
  },
  {
    title: "Best Hilton Hotels for Award Stays in 2025",
    excerpt: "Top value redemptions across the Hilton portfolio for your points.",
    category: "Award Strategies",
    date: "Dec 7, 2025",
    readTime: "10 min"
  },
  {
    title: "World of Hyatt: Why It's the Best Hotel Program",
    excerpt: "Why savvy travelers consider Hyatt the most valuable hotel program.",
    category: "Analysis",
    date: "Dec 5, 2025",
    readTime: "8 min"
  },
  {
    title: "How to Get Hotel Elite Status Fast in 2025",
    excerpt: "Shortcuts and strategies to earn elite status with major hotel chains.",
    category: "Guides",
    date: "Dec 3, 2025",
    readTime: "12 min"
  }
];
---

<MainLayout title="Hotels - Travel Guides" description="Hotel reviews, loyalty program guides, and booking strategies.">
  <!-- Hero -->
  <section class="bg-gradient-to-br from-[#0D2C4B] to-[#1A4A7A] py-16">
    <div class="max-w-[90rem] mx-auto px-4 md:px-8">
      <nav class="text-sm text-gray-400 mb-4">
        <a href="/" class="hover:text-white">Home</a> / 
        <a href="/travel" class="hover:text-white">Travel</a> / 
        <span class="text-white">Hotels</span>
      </nav>
      <h1 class="font-sora text-4xl md:text-5xl font-bold text-white mb-4">Hotels</h1>
      <p class="text-xl text-gray-300 max-w-2xl">Reviews, loyalty programs, and booking strategies for hotel stays worldwide.</p>
    </div>
  </section>

  <!-- Hotel Brands -->
  <section class="py-12 bg-white border-b border-gray-200">
    <div class="max-w-[90rem] mx-auto px-4 md:px-8">
      <h2 class="font-sora text-2xl font-bold text-[#162433] mb-6">Browse by Loyalty Program</h2>
      <div class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-6 gap-4">
        {hotelBrands.map(brand => (
          <a href={`/travel/hotels/${brand.name.toLowerCase().replace(/\s+/g, '-')}`} 
             class="group flex flex-col items-center p-4 rounded-xl border border-gray-200 hover:border-[#3B82F6] hover:shadow-lg transition-all">
            <div class="w-16 h-16 rounded-full flex items-center justify-center text-white font-bold text-lg mb-3" style={`background-color: ${brand.color}`}>
              {brand.logo}
            </div>
            <span class="font-bold text-[#162433] text-center text-sm group-hover:text-[#3B82F6]">{brand.name}</span>
            <span class="text-xs text-[#68727C]">{brand.articles} articles</span>
          </a>
        ))}
      </div>
    </div>
  </section>

  <!-- Articles -->
  <section class="py-12 bg-[#F7F8FA]">
    <div class="max-w-[90rem] mx-auto px-4 md:px-8">
      <h2 class="font-sora text-2xl font-bold text-[#162433] mb-8">Latest Hotel Articles</h2>
      <div class="grid md:grid-cols-2 gap-6">
        {articles.map(article => (
          <article class="bg-white rounded-xl p-6 border border-gray-200 hover:shadow-lg transition-shadow">
            <span class="inline-block bg-[#FEF3C7] text-[#92400E] text-xs font-bold px-3 py-1 rounded-full mb-3">{article.category}</span>
            <h3 class="font-sora text-xl font-bold text-[#162433] mb-2 hover:text-[#3B82F6]">
              <a href="#">{article.title}</a>
            </h3>
            <p class="text-[#68727C] mb-4">{article.excerpt}</p>
            <div class="flex items-center gap-4 text-sm text-[#68727C]">
              <span>{article.date}</span>
              <span>â€¢</span>
              <span>{article.readTime} read</span>
            </div>
          </article>
        ))}
      </div>
    </div>
  </section>
</MainLayout>

