---
import MainLayout from '../../layouts/MainLayout.astro';

const loungePrograms = [
  { name: "Priority Pass", description: "1,300+ lounges worldwide", color: "#6B21A8" },
  { name: "Centurion Lounges", description: "Premium Amex lounges", color: "#1E3A5F" },
  { name: "Delta Sky Club", description: "Delta's airport lounges", color: "#003366" },
  { name: "United Club", description: "United's lounge network", color: "#002244" },
  { name: "Admirals Club", description: "American Airlines lounges", color: "#0078D2" },
  { name: "Plaza Premium", description: "Independent lounge chain", color: "#8B5CF6" }
];

const articles = [
  {
    title: "Complete Guide to Airport Lounge Access in 2025",
    excerpt: "Every way to get into airport lounges, from credit cards to day passes.",
    category: "Guides",
    date: "Dec 9, 2025",
    readTime: "18 min"
  },
  {
    title: "Best Credit Cards for Lounge Access",
    excerpt: "Top credit cards that unlock Priority Pass, Centurion Lounges, and more.",
    category: "Credit Cards",
    date: "Dec 7, 2025",
    readTime: "12 min"
  },
  {
    title: "Amex Centurion Lounge Review: Is It Worth It?",
    excerpt: "An inside look at American Express's premium airport lounges.",
    category: "Reviews",
    date: "Dec 4, 2025",
    readTime: "10 min"
  },
  {
    title: "Priority Pass vs. LoungKey: Which Is Better?",
    excerpt: "Comparing the two largest independent lounge access programs.",
    category: "Comparison",
    date: "Dec 1, 2025",
    readTime: "8 min"
  }
];
---

<MainLayout title="Airport Lounges - Travel Guides" description="Airport lounge reviews, access guides, and credit card recommendations.">
  <!-- Hero -->
  <section class="bg-gradient-to-br from-[#0D2C4B] to-[#1A4A7A] py-16">
    <div class="max-w-[90rem] mx-auto px-4 md:px-8">
      <nav class="text-sm text-gray-400 mb-4">
        <a href="/" class="hover:text-white">Home</a> / 
        <a href="/travel" class="hover:text-white">Travel</a> / 
        <span class="text-white">Airport Lounges</span>
      </nav>
      <h1 class="font-sora text-4xl md:text-5xl font-bold text-white mb-4">Airport Lounges</h1>
      <p class="text-xl text-gray-300 max-w-2xl">Access guides, reviews, and tips to elevate your airport experience.</p>
    </div>
  </section>

  <!-- Lounge Programs -->
  <section class="py-12 bg-white border-b border-gray-200">
    <div class="max-w-[90rem] mx-auto px-4 md:px-8">
      <h2 class="font-sora text-2xl font-bold text-[#162433] mb-6">Lounge Programs</h2>
      <div class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-6 gap-4">
        {loungePrograms.map(program => (
          <a href="#" class="group p-4 rounded-xl border border-gray-200 hover:border-[#3B82F6] hover:shadow-lg transition-all text-center">
            <div class="w-12 h-12 rounded-full mx-auto mb-3 flex items-center justify-center text-white text-xs font-bold" style={`background-color: ${program.color}`}>
              {program.name.substring(0, 2).toUpperCase()}
            </div>
            <span class="font-bold text-[#162433] text-sm group-hover:text-[#3B82F6] block">{program.name}</span>
            <span class="text-xs text-[#68727C]">{program.description}</span>
          </a>
        ))}
      </div>
    </div>
  </section>

  <!-- Quick Stats -->
  <section class="py-8 bg-[#0D2C4B]">
    <div class="max-w-[90rem] mx-auto px-4 md:px-8">
      <div class="grid grid-cols-2 md:grid-cols-4 gap-8 text-center">
        <div>
          <div class="text-4xl font-bold text-white">1,300+</div>
          <div class="text-gray-400">Priority Pass Lounges</div>
        </div>
        <div>
          <div class="text-4xl font-bold text-white">14</div>
          <div class="text-gray-400">Centurion Lounges</div>
        </div>
        <div>
          <div class="text-4xl font-bold text-white">50+</div>
          <div class="text-gray-400">Delta Sky Clubs</div>
        </div>
        <div>
          <div class="text-4xl font-bold text-white">45+</div>
          <div class="text-gray-400">United Clubs</div>
        </div>
      </div>
    </div>
  </section>

  <!-- Articles -->
  <section class="py-12 bg-[#F7F8FA]">
    <div class="max-w-[90rem] mx-auto px-4 md:px-8">
      <h2 class="font-sora text-2xl font-bold text-[#162433] mb-8">Latest Lounge Articles</h2>
      <div class="grid md:grid-cols-2 gap-6">
        {articles.map(article => (
          <article class="bg-white rounded-xl p-6 border border-gray-200 hover:shadow-lg transition-shadow">
            <span class="inline-block bg-[#E0E7FF] text-[#4338CA] text-xs font-bold px-3 py-1 rounded-full mb-3">{article.category}</span>
            <h3 class="font-sora text-xl font-bold text-[#162433] mb-2 hover:text-[#3B82F6]">
              <a href="#">{article.title}</a>
            </h3>
            <p class="text-[#68727C] mb-4">{article.excerpt}</p>
            <div class="flex items-center gap-4 text-sm text-[#68727C]">
              <span>{article.date}</span>
              <span>â€¢</span>
              <span>{article.readTime} read</span>
            </div>
          </article>
        ))}
      </div>
    </div>
  </section>
</MainLayout>



