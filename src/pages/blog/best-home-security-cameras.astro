        <table class="premium-comparison-table w-full min-w-[1000px]">
          <thead>
            <tr>
              <th class="text-left pl-4">Brand</th>
              <th class="text-left">Best For</th>
              <th class="text-left">Monthly Fee</th>
              <th class="text-left">Camera Price</th>
              <th class="text-left">Resolution</th>
              <th></th>
            </tr>
          </thead>
          <tbody>
            {cameras.map((camera, index) => (
              <tr class="comparison-row">
                <td class="card-cell">
                  {index === 0 && (
                    <span class="card-badge card-badge-new">Editor's Pick</span>
                  )}
                  {index === 4 && (
                    <span class="card-badge card-badge-premium">No Fees</span>
                  )}
                  <div class="card-info-wrapper">
                    <div class="card-image-container">
                      <img 
                        src={getSecurityCameraLogo(camera.slug) || `https://logo.clearbit.com/${camera.slug}.com`}
                        alt={`${camera.name}`}
                        class="card-thumbnail"
                        loading="lazy"
                      />
                    </div>
                    <div class="card-details">
                      <h3 class="card-name-link">{camera.name}</h3>
                      <div class="card-rating">
