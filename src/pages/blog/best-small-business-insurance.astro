                <div class="w-48 h-24 flex items-center justify-center bg-white rounded-xl shadow-lg p-4 group-hover:scale-105 transition-all duration-500">
                  <img 
                    src={getBusinessInsuranceLogo(provider.slug) || `https://logo.clearbit.com/${provider.slug}.com`}
                    alt={`${provider.name} logo`}
                    class="max-w-full max-h-full object-contain"
                    loading={index < 3 ? "eager" : "lazy"}
                  />
                </div>
                
                {/* Floating Rating */}
                <div class="absolute -bottom-3 left-1/2 -translate-x-1/2 flex items-center gap-1.5 bg-white px-3 py-1.5 rounded-full shadow-lg border border-gray-100">
                  <svg class="w-4 h-4 text-yellow-500" fill="currentColor" viewBox="0 0 20 20"><path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"/></svg>
                  <span class="font-bold text-[#162433] text-sm">{provider.rating}</span>
                  <span class="text-[#68727C] text-xs">/5</span>
                </div>
              </div>
              
              {/* CTA Button */}
              <a href="#" class="apply-btn w-full">
                <span>Get Quote</span>
                <svg class="w-4 h-4 transition-transform group-hover:translate-x-1" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 5l7 7m0 0l-7 7m7-7H3"/></svg>
              </a>
              <p class="text-xs text-[#68727C] text-center mt-2">On {provider.name}'s secure website</p>
            </div>

            <!-- Right Panel -->
            <div class="p-6 md:p-8">
              {/* Header */}
              <div class="flex flex-wrap items-start justify-between gap-4 mb-4">
                <div>
                  <span class="inline-block bg-gradient-to-r from-[#EBF5FF] to-[#E0F2FE] text-[#0066B2] text-xs font-bold uppercase px-3 py-1 rounded-full mb-2">
                    Best for {provider.bestFor}
                  </span>
                  <h3 class="font-sora text-xl md:text-2xl font-bold text-[#162433] leading-tight">{provider.name}</h3>
                </div>
              </div>
              
              {/* Description */}
              <p class="text-[#4B5563] mb-6 leading-relaxed">{provider.description}</p>

              {/* Key Stats Grid */}
              <div class="grid grid-cols-2 md:grid-cols-3 gap-3 mb-6">
                <div class="stat-box">
                  <div class="stat-label">Monthly Cost</div>
                  <div class="stat-value">{provider.monthlyAvg}</div>
                </div>
                <div class="stat-box">
                  <div class="stat-label">AM Best Rating</div>
                  <div class="stat-value text-green-600">{provider.amBest}</div>
                </div>
                <div class="stat-box">
                  <div class="stat-label">Our Rating</div>
                  <div class="stat-value">{provider.rating}/5</div>
                </div>
              </div>

              {/* Accordion Sections */}
              <div class="accordion-container border-t border-gray-100 mt-4 pt-4">
                
                {/* Bottom Line Accordion */}
                {provider.bottomLine && (
                  <details class="accordion-item">
                    <summary class="accordion-header">
                      <span>Bottom Line</span>
                      <svg class="accordion-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M6 9l6 6 6-6" stroke-linecap="round" stroke-linejoin="round"/></svg>
                    </summary>
                    <div class="accordion-content">
                      <p>{provider.bottomLine}</p>
                    </div>
                  </details>
                )}
                
                {/* Pros/Cons Accordion */}
                <details class="accordion-item">
                  <summary class="accordion-header">
                    <span>Pros/Cons</span>
                    <svg class="accordion-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M6 9l6 6 6-6" stroke-linecap="round" stroke-linejoin="round"/></svg>
                  </summary>
                  <div class="accordion-content">
                    <div class="grid md:grid-cols-2 gap-6">
                      <div>
                        <h4 class="font-bold text-[#162433] mb-3 flex items-center gap-2 text-sm">
