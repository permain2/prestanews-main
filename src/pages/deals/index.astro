---
import MainLayout from '../../layouts/MainLayout.astro';
import PostCard from '../../components/PostCard.astro';

// Deals posts (placeholder articles)
const dealsPosts = [
  {
    title: "Amex Platinum: 150K Welcome Bonus",
    description: "Limited-time offer on the American Express Platinum Card with 150,000 Membership Rewards points after qualifying spend.",
    href: "/deals/amex-platinum-150k",
    category: "Credit Card Bonus",
    author: "PrestaNews Team",
    date: "Dec 10, 2025"
  },
  {
    title: "Delta Flash Sale: Europe from $399",
    description: "Delta is offering roundtrip flights to major European cities starting at $399. Book by December 15th for travel through March.",
    href: "/deals/delta-europe-flash-sale",
    category: "Flights",
    author: "PrestaNews Team",
    date: "Dec 9, 2025"
  },
  {
    title: "Marriott 30% Off Winter Sale",
    description: "Save up to 30% on stays at participating Marriott properties across North America. Valid for stays through February 2026.",
    href: "/deals/marriott-winter-sale",
    category: "Hotels",
    author: "PrestaNews Team",
    date: "Dec 8, 2025"
  },
  {
    title: "Chase Sapphire Preferred: 80K Points",
    description: "Earn 80,000 bonus points after spending $4,000 in the first 3 months. One of the best offers we've seen this year.",
    href: "/deals/chase-sapphire-80k",
    category: "Credit Card Bonus",
    author: "PrestaNews Team",
    date: "Dec 7, 2025"
  },
  {
    title: "United Airlines Award Sale: 50% Off",
    description: "United is offering 50% off select award flights to Mexico and the Caribbean. Limited availability through next week.",
    href: "/deals/united-award-sale",
    category: "Flights",
    author: "PrestaNews Team",
    date: "Dec 6, 2025"
  },
  {
    title: "Hilton Points Sale: 100% Bonus",
    description: "Buy Hilton Honors points with a 100% bonus. Great opportunity to top off your balance for an upcoming redemption.",
    href: "/deals/hilton-points-sale",
    category: "Points Sale",
    author: "PrestaNews Team",
    date: "Dec 5, 2025"
  }
];
---

<MainLayout title="Deals" description="The best deals on flights, hotels, and credit card bonuses.">
  <!-- Header -->
  <section class="collection-header">
    <div class="header-container">
      <h1 class="collection-title">Deals</h1>
      <p class="collection-description">
        Don't miss out on the best travel deals, credit card bonuses, and limited-time offers. 
        Updated daily with the hottest promotions.
      </p>
    </div>
  </section>

  <!-- Posts Grid -->
  <section class="posts-section">
    <div class="posts-container">
      <div class="posts-grid">
        {dealsPosts.map(post => (
          <PostCard
            title={post.title}
            description={post.description}
            href={post.href}
            category={post.category}
            author={post.author}
            date={post.date}
          />
        ))}
      </div>
    </div>
  </section>
</MainLayout>

<style>
  .collection-header {
    background: #EEF2F6;
    padding: 3.5rem 0;
  }

  .header-container {
    max-width: 76rem;
    margin: 0 auto;
    padding: 0 2rem;
    text-align: center;
  }

  .collection-title {
    font-family: 'Sora', sans-serif;
    font-size: clamp(2rem, 4vw, 3rem);
    font-weight: 700;
    color: #162433;
    margin-bottom: 1rem;
  }

  .collection-description {
    font-family: 'Poppins', sans-serif;
    font-size: 1.125rem;
    line-height: 1.7;
    color: #68727C;
    max-width: 40rem;
    margin: 0 auto;
  }

  .posts-section {
    background: #ffffff;
    padding: 3rem 0 4rem;
  }

  .posts-container {
    max-width: 76rem;
    margin: 0 auto;
    padding: 0 2rem;
  }

  .posts-grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 2rem;
  }

  @media (max-width: 1024px) {
    .posts-grid {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  @media (max-width: 768px) {
    .collection-header {
      padding: 2rem 0;
    }

    .header-container,
    .posts-container {
      padding: 0 1.25rem;
    }

    .posts-grid {
      grid-template-columns: 1fr;
      gap: 1.5rem;
    }
  }
</style>
