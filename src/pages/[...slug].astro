---
// Catch-all 301 redirect for old screened.com legacy URLs
// Handles movie/TV URLs from the previous site and redirects to homepage
// This preserves some link equity from existing backlinks

const { slug } = Astro.params;
const path = slug ? (Array.isArray(slug) ? slug.join('/') : slug) : '';

// Log for debugging (remove in production)
console.log(`[301 Redirect] Old URL accessed: /${path}`);

// All unmatched URLs redirect to homepage with 301 (permanent)
return Astro.redirect('/', 301);
---
