    opacity: 0.5;
  }

  .hero-container {
    max-width: 90rem;
    margin: 0 auto;
    padding: 0 2rem;
  }

  .hero-content {
    text-align: center;
    max-width: 48rem;
    margin: 0 auto;
    position: relative;
    z-index: 1;
  }

  .hero-subtitle {
    font-family: 'Poppins', sans-serif;
    font-size: 1.125rem;
    color: #68727C;
    line-height: 1.7;
    max-width: 36rem;
    margin: 0 auto;
  }

  /* Quick Links Pills */
  .quick-links-section {
    background: #F7F8FA;
    padding: 2.5rem 0;
    border-bottom: 1px solid #E6E8EB;
  }

  .quick-links-container {
    max-width: 90rem;
    margin: 0 auto;
    padding: 0 2rem;
  }

  .quick-links-scroll {
    display: flex;
    gap: 1rem;
    justify-content: center;
    flex-wrap: wrap;
  }

  .quick-link-pill {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.75rem 1.5rem;
    background: white;
    border: 1px solid #E6E8EB;
    border-radius: 100px;
    font-family: 'Poppins', sans-serif;
    font-size: 0.875rem;
    font-weight: 500;
    color: #162433;
    text-decoration: none;
    transition: all 0.2s ease;
  }

  .quick-link-pill:hover {
    background: #0D2C4B;
    color: white;
    border-color: #0D2C4B;
  }

  .pill-icon {
    width: 1.125rem;
    height: 1.125rem;
  }

  /* Breaking Section */
  .breaking-section {
    background: white;
    padding: 3.5rem 0;
  }

  .breaking-container {
    max-width: 76rem;
    margin: 0 auto;
    padding: 0 2rem;
  }

  .section-title {
    font-family: 'Lexend', sans-serif;
    font-size: clamp(1.75rem, 4vw, 3rem);
    font-weight: 600;
    color: #162433;
    text-align: center;
    margin-bottom: 2.5rem;
  }

  .breaking-grid {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 2.5rem;
  }

  .featured-article {
    position: relative;
    border-radius: 1rem;
    overflow: hidden;
    text-decoration: none;
    background: #162433;
    display: block;
    min-height: 28rem;
  }

  .featured-image-wrap {
    position: absolute;
    inset: 0;
  }

  .featured-img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.3s ease;
  }

  .featured-article:hover .featured-img {
    transform: scale(1.05);
  }

  .featured-overlay {
    position: absolute;
    inset: 0;
    background: linear-gradient(180deg, transparent 30%, rgba(22, 36, 51, 0.95) 100%);
  }

  .featured-content {
    position: absolute;
    bottom: 0;
    left: 0;
    right: 0;
    padding: 2rem;
    color: white;
  }

  .article-category {
    font-family: 'Lexend', sans-serif;
    font-size: 0.875rem;
    font-weight: 600;
    letter-spacing: 2px;
    color: #29836B;
    display: block;
    margin-bottom: 0.5rem;
  }

  .featured-title {
    font-family: 'Lexend', sans-serif;
    font-size: 1.5rem;
    font-weight: 600;
    color: white;
    line-height: 1.3;
    margin-bottom: 1rem;
  }

  .featured-meta {
    display: flex;
    align-items: center;
    justify-content: space-between;
  }

  .meta-date {
    font-family: 'Poppins', sans-serif;
    font-size: 0.875rem;
    color: rgba(255, 255, 255, 0.8);
  }

  .meta-arrow svg {
    width: 2.5rem;
    height: 2.5rem;
    color: white;
    transition: transform 0.2s ease;
  }

  .featured-article:hover .meta-arrow svg {
    transform: translateX(4px);
  }

  .side-articles {
    display: flex;
    flex-direction: column;
  }

  .side-article {
    display: flex;
    align-items: center;
    gap: 1rem;
    padding: 1.5rem 0;
    border-bottom: 1px solid #E6E8EB;
    text-decoration: none;
  }

  .side-article:last-child {
    border-bottom: none;
  }

  .side-article-content {
    flex: 1;
  }

  .article-category-small {
    font-family: 'Poppins', sans-serif;
    font-size: 0.75rem;
    font-weight: 600;
    letter-spacing: 1px;
    color: #006056;
    display: block;
    margin-bottom: 0.25rem;
  }

  .side-article-title {
    font-family: 'Lexend', sans-serif;
    font-size: 1.125rem;
    font-weight: 600;
    color: #162433;
    line-height: 1.4;
    margin-bottom: 0.5rem;
    transition: color 0.2s ease;
  }

  .side-article:hover .side-article-title {
    color: #146aff;
  }

  .side-article-date {
    font-family: 'Poppins', sans-serif;
    font-size: 0.875rem;
    color: #68727C;
  }

  .side-article-image {
    width: 8rem;
    height: 6rem;
    border-radius: 0.5rem;
    overflow: hidden;
    flex-shrink: 0;
  }

  .side-article-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  /* Offers Section - Apple-like Premium Design */
  .offers-section {
    background: linear-gradient(180deg, #0f1c28 0%, #162433 50%, #1a2c3d 100%);
    padding: 5rem 0;
    position: relative;
    overflow: hidden;
  }

  .offers-section::before {
    content: '';
    position: absolute;
    inset: 0;
    background: 
