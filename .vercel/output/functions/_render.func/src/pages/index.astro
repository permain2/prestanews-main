---
import MainLayout from '../layouts/MainLayout.astro';
import { getCollection } from 'astro:content';
import HeroTypewriter from '../components/HeroTypewriter.tsx';
import OrganizationSchema from '../components/seo/OrganizationSchema.astro';
import WebsiteSchema from '../components/seo/WebsiteSchema.astro';
import { SITE_TITLE, SITE_DESCRIPTION } from '../consts';

// Get latest articles
const allPosts = await getCollection('blog');
const latestPosts = allPosts.sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf()).slice(0, 8);
const featuredPost = latestPosts[0];
const sidePosts = latestPosts.slice(1, 4);

// Team for featured authors
const authors = [
  { name: "Sarah Chen", role: "Editor-in-Chief", image: "/team/sarah-chen.jpg", slug: "sarah-chen" },
  { name: "Michael Rodriguez", role: "Senior Credit Card Analyst", image: "/team/michael-rodriguez.jpg", slug: "michael-rodriguez" },
  { name: "Emily Johnson", role: "Insurance Editor", image: "/team/emily-johnson.jpg", slug: "emily-johnson" },
];
---

<MainLayout title={SITE_TITLE} description={SITE_DESCRIPTION}>
  <!-- Homepage-specific structured data -->
  <OrganizationSchema />
  <WebsiteSchema />
  
  <!-- Hero Section -->
  <section class="hero-section">
    <div class="hero-container">
      <div class="hero-content">
        <HeroTypewriter 
          client:load 
          words={["Financial", "Insurance", "Credit", "Investment", "Money"]} 
        />
        <p class="hero-subtitle">
          Expert reviews and unbiased comparisons on credit cards, insurance, and personal finance — helping you save money and choose with confidence.
        </p>
      </div>
    </div>
  </section>

  <!-- Quick Links Pills -->
  <section class="quick-links-section">
    <div class="quick-links-container">
      <div class="quick-links-scroll">
        <a href="/credit-cards" class="quick-link-pill">
          <svg class="pill-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <rect x="1" y="4" width="22" height="16" rx="2" ry="2"></rect>
            <line x1="1" y1="10" x2="23" y2="10"></line>
          </svg>
          Credit Cards
        </a>
        <a href="/insurance" class="quick-link-pill">
          <svg class="pill-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <path d="M12 22s8-4 8-10V5l-8-3-8 3v7c0 6 8 10 8 10z"></path>
          </svg>
          Insurance
        </a>
        <a href="/insurance/car" class="quick-link-pill">
          <svg class="pill-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <path d="M7 17m-2 0a2 2 0 1 0 4 0a2 2 0 1 0 -4 0"></path>
            <path d="M17 17m-2 0a2 2 0 1 0 4 0a2 2 0 1 0 -4 0"></path>
            <path d="M5 17H3v-6l2-5h9l4 5h1a2 2 0 0 1 2 2v4h-2m-4 0H9"></path>
          </svg>
          Car Insurance
        </a>
        <a href="/insurance/home" class="quick-link-pill">
          <svg class="pill-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <path d="M3 9l9-7 9 7v11a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2z"></path>
            <polyline points="9 22 9 12 15 12 15 22"></polyline>
          </svg>
          Home Insurance
        </a>
        <a href="/blog" class="quick-link-pill">
          <svg class="pill-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <path d="M14 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V8z"></path>
            <polyline points="14 2 14 8 20 8"></polyline>
            <line x1="16" y1="13" x2="8" y2="13"></line>
            <line x1="16" y1="17" x2="8" y2="17"></line>
          </svg>
          Blog
        </a>
      </div>
    </div>
  </section>

  <!-- Breaking News / Featured Articles -->
  <section class="breaking-section">
    <div class="breaking-container">
      <h2 class="section-title">Latest Financial News & Insights</h2>
      
      <div class="breaking-grid">
        <!-- Featured Article -->
        {featuredPost && (
          <a href={`/blog/${featuredPost.id}`} class="featured-article">
            <div class="featured-image-wrap">
              {featuredPost.data.heroImage && (
                <img src={featuredPost.data.heroImage} alt={featuredPost.data.title} class="featured-img" />
              )}
              <div class="featured-overlay"></div>
            </div>
            <div class="featured-content">
              <span class="article-category">FEATURED</span>
              <h3 class="featured-title">{featuredPost.data.title}</h3>
              <div class="featured-meta">
                <span class="meta-date">{featuredPost.data.pubDate.toLocaleDateString('en-US', { month: 'short', day: 'numeric', year: 'numeric' })}</span>
                <span class="meta-arrow">
                  <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <circle cx="12" cy="12" r="10"></circle>
                    <path d="M12 8l4 4-4 4"></path>
                    <line x1="8" y1="12" x2="16" y2="12"></line>
                  </svg>
                </span>
              </div>
            </div>
          </a>
        )}

        <!-- Side Articles -->
        <div class="side-articles">
          {sidePosts.map((post) => (
            <a href={`/blog/${post.id}`} class="side-article">
              <div class="side-article-content">
                <span class="article-category-small">NEWS</span>
                <h4 class="side-article-title">{post.data.title}</h4>
                <span class="side-article-date">{post.data.pubDate.toLocaleDateString('en-US', { month: 'short', day: 'numeric' })}</span>
              </div>
              {post.data.heroImage && (
                <div class="side-article-image">
                  <img src={post.data.heroImage} alt={post.data.title} />
                </div>
              )}
            </a>
          ))}
        </div>
      </div>
    </div>
  </section>

  <!-- Top Credit Card Offers -->
  <section class="offers-section">
    <div class="offers-container">
      <h2 class="offers-title">Great offers from our partners</h2>
      
      <div class="offers-grid">
        <!-- Card 1 -->
        <div class="offer-card">
          <div class="offer-badge">Best for Travel</div>
          <div class="offer-card-image">
            <img src="/credit-cards/chase-sapphire-preferred.png" alt="Chase Sapphire Preferred" />
          </div>
          <div class="offer-content">
            <h3 class="offer-name">Chase Sapphire Preferred®</h3>
            <p class="offer-description">Earn 75,000 bonus points after qualifying spend.</p>
            <div class="offer-highlight">
              <span class="highlight-number">75,000</span>
              <span class="highlight-label">bonus points</span>
            </div>
            <a href="https://www.chase.com/personal/credit-cards/sapphire/sapphire-preferred?utm_source=prestanews&utm_medium=affiliate" class="offer-cta" target="_blank" rel="noopener noreferrer">Apply Now</a>
          </div>
        </div>

        <!-- Card 2 -->
        <div class="offer-card">
          <div class="offer-badge">Best for Miles</div>
          <div class="offer-card-image">
            <img src="/credit-cards/capital-one-venture-x.png" alt="Capital One Venture X" />
          </div>
          <div class="offer-content">
            <h3 class="offer-name">Capital One Venture X</h3>
            <p class="offer-description">Earn 100,000 bonus miles with limited-time offer.</p>
            <div class="offer-highlight">
              <span class="highlight-number">100,000</span>
              <span class="highlight-label">bonus miles</span>
            </div>
            <a href="https://www.capitalone.com/credit-cards/venture-x/?utm_source=prestanews&utm_medium=affiliate" class="offer-cta" target="_blank" rel="noopener noreferrer">Apply Now</a>
          </div>
        </div>

        <!-- Card 3 -->
        <div class="offer-card">
          <div class="offer-badge">Best for Cash Back</div>
          <div class="offer-card-image">
            <img src="/credit-cards/citi-double-cash.png" alt="Citi Double Cash" />
          </div>
          <div class="offer-content">
            <h3 class="offer-name">Citi Double Cash® Card</h3>
            <p class="offer-description">Earn 2% cash back on every purchase, everywhere.</p>
            <div class="offer-highlight">
              <span class="highlight-number">2%</span>
              <span class="highlight-label">unlimited cash back</span>
            </div>
            <a href="https://www.citi.com/credit-cards/citi-double-cash-credit-card?utm_source=prestanews&utm_medium=affiliate" class="offer-cta" target="_blank" rel="noopener noreferrer">Apply Now</a>
          </div>
        </div>
      </div>

      <div class="offers-footer">
        <a href="/credit-cards" class="see-all-btn">See All Credit Cards →</a>
      </div>
    </div>
  </section>

  <!-- Explore Categories -->
  <section class="categories-section">
    <div class="categories-container">
      <h2 class="categories-title">Explore Our Coverage</h2>
      <p class="categories-subtitle">Find the best financial products for your needs</p>
      
      <div class="categories-grid">
        <a href="/credit-cards" class="category-card credit-cards-cat">
          <div class="category-icon">
            <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
              <rect x="1" y="4" width="22" height="16" rx="2" ry="2"></rect>
              <line x1="1" y1="10" x2="23" y2="10"></line>
            </svg>
          </div>
          <h3>Credit Cards</h3>
          <p>Compare rewards, cash back, travel & business cards</p>
          <span class="category-arrow">→</span>
        </a>

        <a href="/insurance" class="category-card insurance-cat">
          <div class="category-icon">
            <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
              <path d="M12 22s8-4 8-10V5l-8-3-8 3v7c0 6 8 10 8 10z"></path>
            </svg>
          </div>
          <h3>Insurance</h3>
          <p>Auto, home, renters & life insurance guides</p>
          <span class="category-arrow">→</span>
        </a>

        <a href="/blog" class="category-card news-cat">
          <div class="category-icon">
            <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
              <path d="M14 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V8z"></path>
              <polyline points="14 2 14 8 20 8"></polyline>
            </svg>
          </div>
          <h3>Blog</h3>
          <p>Latest industry updates & insights</p>
          <span class="category-arrow">→</span>
        </a>

        <a href="/reviews" class="category-card reviews-cat">
          <div class="category-icon">
            <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
              <polygon points="12 2 15.09 8.26 22 9.27 17 14.14 18.18 21.02 12 17.77 5.82 21.02 7 14.14 2 9.27 8.91 8.26 12 2"></polygon>
            </svg>
          </div>
          <h3>Reviews</h3>
          <p>In-depth product reviews & ratings</p>
          <span class="category-arrow">→</span>
        </a>
      </div>
    </div>
  </section>

  <!-- Latest Articles Grid -->
  <section class="latest-section">
    <div class="latest-container">
      <div class="latest-header">
        <h2 class="latest-title">Latest Articles</h2>
        <a href="/blog" class="view-all-link">View All →</a>
      </div>

      <div class="latest-grid">
        {latestPosts.slice(0, 8).map((post) => (
          <a href={`/blog/${post.id}`} class="latest-card">
            <div class="latest-card-image">
              <img src={post.data.heroImage || '/blog-images/default-article.jpg'} alt={post.data.title} loading="lazy" />
            </div>
            <div class="latest-card-content">
              <span class="latest-category">{post.data.tags?.[0] || 'News'}</span>
              <h3 class="latest-card-title">{post.data.title}</h3>
              <p class="latest-card-excerpt">{post.data.description}</p>
              {post.data.author && (
                <div class="latest-card-author">
                  {post.data.authorImage && (
                    <img src={post.data.authorImage} alt={post.data.author} class="author-avatar" />
                  )}
                  <span class="author-name">{post.data.author}</span>
                </div>
              )}
            </div>
          </a>
        ))}
      </div>
    </div>
  </section>

  <!-- Featured Authors Section -->
  <section class="authors-section">
    <div class="authors-container">
      <h2 class="authors-title">Meet Our Experts</h2>
      <p class="authors-subtitle">Industry professionals dedicated to helping you make smarter financial decisions</p>
      
      <div class="authors-grid">
        {authors.map((author) => (
          <div class="author-card">
            <div class="author-image">
              <img src={author.image} alt={author.name} loading="lazy" />
            </div>
            <div class="author-info">
              <h3 class="author-card-name">{author.name}</h3>
              <p class="author-card-role">{author.role}</p>
            </div>
          </div>
        ))}
      </div>

      <div class="authors-cta">
        <a href="/about" class="meet-team-btn">Meet the Full Team →</a>
      </div>
    </div>
  </section>

</MainLayout>

<style>
  /* Hero Section */
  .hero-section {
    background: linear-gradient(180deg, #ffffff 0%, #F7F8FA 100%);
    padding: 4rem 0 2rem;
    position: relative;
    overflow: hidden;
  }

  .hero-section::before {
    content: '';
    position: absolute;
    top: 0;
    right: 0;
    width: 60%;
    height: 100%;
    background: url("data:image/svg+xml,%3Csvg width='60' height='60' viewBox='0 0 60 60' xmlns='http://www.w3.org/2000/svg'%3E%3Cpath d='M54.627 0l.83.828-1.415 1.415L51.8 0h2.827zM5.373 0l-.83.828L5.96 2.243 8.2 0H5.374zM48.97 0l3.657 3.657-1.414 1.414L46.143 0h2.828zM11.03 0L7.372 3.657 8.787 5.07 13.857 0H11.03zm32.284 0L49.8 6.485 48.384 7.9l-7.9-7.9h2.83zM16.686 0L10.2 6.485 11.616 7.9l7.9-7.9h-2.83zm20.97 0l9.315 9.314-1.414 1.414L34.828 0h2.83zM22.344 0L13.03 9.314l1.414 1.414L25.172 0h-2.83zM32 0l12.142 12.142-1.414 1.414L30 .828 17.272 13.556l-1.414-1.414L28 0h4zM.284 0l28 28-1.414 1.414L0 2.544V0h.284zM0 5.373l25.456 25.455-1.414 1.415L0 8.2V5.374zm0 5.656l22.627 22.627-1.414 1.414L0 13.86v-2.83zm0 5.656l19.8 19.8-1.415 1.413L0 19.514v-2.83zm0 5.657l16.97 16.97-1.414 1.415L0 25.172v-2.83zM0 28l14.142 14.142-1.414 1.414L0 30.828V28zm0 5.657L11.314 44.97 9.9 46.386l-9.9-9.9v-2.828zm0 5.657L8.485 47.8 7.07 49.212 0 42.143v-2.83zm0 5.657l5.657 5.657-1.414 1.415L0 47.8v-2.83zm0 5.657l2.828 2.83-1.414 1.413L0 53.456v-2.83zM54.627 60L30 35.373 5.373 60H8.2L30 38.2 51.8 60h2.827zm-5.656 0L30 41.03 11.03 60h2.828L30 43.858 46.142 60h2.83zm-5.656 0L30 46.686 16.686 60h2.83L30 49.515 40.485 60h2.83zm-5.657 0L30 52.343 22.344 60h2.828L30 55.172 34.828 60h2.83zM32 60l-2-2-2 2h4zM59.716 0l-28 28 1.414 1.414L60 2.544V0h-.284zM60 5.373L34.544 30.828l1.414 1.415L60 8.2V5.374zm0 5.656L37.373 33.656l1.414 1.414L60 13.86v-2.83zm0 5.656l-19.8 19.8 1.415 1.413L60 19.514v-2.83zm0 5.657l-16.97 16.97 1.414 1.415L60 25.172v-2.83zM60 28L45.858 42.142l1.414 1.414L60 30.828V28zm0 5.657L48.686 44.97l1.415 1.415 9.9-9.9v-2.828zm0 5.657L51.515 47.8l1.414 1.413 7.07-7.07v-2.83zm0 5.657l-5.657 5.657 1.414 1.415L60 47.8v-2.83zm0 5.657l-2.828 2.83 1.414 1.413L60 53.456v-2.83zM39.9 16.385l1.414-1.414L30 3.658 18.686 14.97l1.415 1.415 9.9-9.9 9.9 9.9zm-2.83 2.828l1.415-1.414L30 9.313 21.515 17.8l1.414 1.413 7.07-7.07 7.07 7.07zm-2.827 2.83l1.414-1.416L30 14.97l-5.657 5.657 1.414 1.415L30 17.8