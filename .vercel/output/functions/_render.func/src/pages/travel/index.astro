---
import MainLayout from '../../layouts/MainLayout.astro';

const categories = [
  { name: "Airlines", slug: "airlines", description: "Airline news, reviews, and loyalty programs" },
  { name: "Hotels", slug: "hotels", description: "Hotel reviews and elite status guides" },
  { name: "Cruises", slug: "cruises", description: "Cruise line reviews and booking tips" },
  { name: "Destinations", slug: "destinations", description: "Travel guides for cities worldwide" },
  { name: "Airport Lounges", slug: "airport-lounges", description: "Lounge access and reviews" },
];
---

<MainLayout title="Travel" description="Travel news, guides, and tips.">
  <div class="collection-page">
    <!-- Header -->
    <header class="page-header">
      <div class="container-main">
        <h1>Travel</h1>
        <p>Breaking news and stories covering travel, hotels, and aviation.</p>
      </div>
    </header>

    <!-- Categories -->
    <section class="categories-section">
      <div class="container-main">
        <nav class="category-nav">
          {categories.map(cat => (
            <a href={`/travel/${cat.slug}`} class="btn-filter">{cat.name}</a>
          ))}
        </nav>
      </div>
    </section>

    <!-- Content Area -->
    <section class="content-section">
      <div class="container-main">
        <p class="placeholder-text">Articles coming soon. Check back for the latest travel news and guides.</p>
      </div>
    </section>
  </div>
</MainLayout>

<style>
  .collection-page {
    background: #ffffff;
    min-height: 60vh;
  }

  .page-header {
    background: #EEF2F6;
    padding: 3.5rem 0;
    text-align: center;
  }

  .page-header h1 {
    font-family: 'Sora', sans-serif;
    font-size: 2.5rem;
    font-weight: 700;
    color: #162433;
    margin-bottom: 0.75rem;
  }

  .page-header p {
    font-family: 'Poppins', sans-serif;
    font-size: 1.125rem;
    color: #68727C;
  }

  .categories-section {
    border-bottom: 1px solid #E6E8EB;
    padding: 1rem 0;
  }

  .category-nav {
    display: flex;
    gap: 1rem;
    overflow-x: auto;
    padding-bottom: 0.5rem;
  }

  .content-section {
    padding: 4rem 0;
  }

  .placeholder-text {
    font-family: 'Poppins', sans-serif;
    font-size: 1rem;
    color: #68727C;
    text-align: center;
  }

  @media (max-width: 768px) {
    .page-header {
      padding: 2rem 0;
    }

    .page-header h1 {
      font-size: 2rem;
    }
  }
</style>
