{
  "tpgStyle": {
    "voice": {
      "authority": "Expert friend who's done the research",
      "perspective": "First-person plural for credibility",
      "readerAddress": "Second-person for engagement",
      "confidence": "Direct recommendations, never wishy-washy"
    },
    
    "vocabulary": {
      "mustUse": [
        "welcome bonus",
        "annual fee",
        "cardholders",
        "transfer partners",
        "earning rate",
        "account anniversary",
        "statement credit",
        "bonus categories"
      ],
      "neverUse": [
        "sign-up bonus",
        "yearly fee",
        "card owners",
        "partner airlines",
        "rewards rate",
        "yearly renewal",
        "credit to your account",
        "reward categories"
      ],
      "replacements": {
        "sign-up bonus": "welcome bonus",
        "signup bonus": "welcome bonus",
        "yearly fee": "annual fee",
        "card owners": "cardholders",
        "amazing deal": "excellent value",
        "best deal": "optimal value",
        "cheap": "budget-friendly",
        "expensive": "premium",
        "you should": "we recommend",
        "we think": "based on our analysis",
        "get rich quick": "build wealth",
        "guaranteed returns": "potential returns",
        "no risk": "lower risk"
      }
    },
    
    "sentencePatterns": {
      "openers": [
        "The [Product] is one of the most [superlative] [category] on the market.",
        "[Brand] delivers [benefit] with its [feature].",
        "You'll earn [rate] on [category] purchases.",
        "If you're looking for [benefit], [Product] is a top pick.",
        "With its strong [feature], [Product] stands out from competitors.",
        "Cardholders can [benefit] with [feature].",
        "While the [Product] carries a [fee], it [justification]."
      ],
      "transitions": [
        "On top of that,",
        "While other [products]...",
        "Unlike most [competitors],",
        "With its strong [feature],",
        "That said,",
        "If you're [user type],",
        "For those who [condition],"
      ],
      "valueStatements": [
        "packs a ton of value",
        "easily offsets the annual fee",
        "a solid choice for",
        "a top pick for",
        "remains one of the most rewarding",
        "delivers excellent value",
        "a surprisingly powerful [product]",
        "stands out from competitors"
      ],
      "closers": [
        "Read our full review of [Product].",
        "[Product] is ideal for [specific user type].",
        "If [condition], this is the one to get."
      ]
    },
    
    "formatting": {
      "rewardsFormat": "[X]x â€” Earn [X]x on [category].",
      "prosFormat": "Start with action verb, include specific numbers",
      "consFormat": "Honest tradeoff with specific numbers",
      "maxParagraphSentences": 4,
      "avgSentenceWords": 18,
      "useDashesNotParens": true,
      "numberFormat": "specific (e.g., '$95 annual fee' not 'low fee')"
    },
    
    "sections": {
      "required": [
        "intro",
        "product-cards",
        "comparison-table",
        "how-it-works",
        "how-to-choose",
        "best-by-category",
        "methodology",
        "faq"
      ],
      "intro": {
        "wordCount": { "min": 40, "max": 75 },
        "mustInclude": ["data points analyzed", "team expertise", "value proposition"]
      },
      "bottomLine": {
        "structure": [
          "Confident recommendation statement",
          "Specific value calculation or comparison",
          "Who this is ideal for",
          "Who should look elsewhere (optional)"
        ]
      },
      "faq": {
        "minQuestions": 8,
        "maxQuestions": 12,
        "answerWordCount": { "min": 50, "max": 100 }
      }
    },
    
    "seoRequirements": {
      "keywordInFirst100Words": true,
      "keywordInH1": true,
      "keywordInAtLeast2H2s": true,
      "keywordDensity": { "min": 0.5, "max": 2.5 },
      "minWordCount": 2500,
      "targetWordCount": 3500,
      "minH2Count": 6,
      "minFaqCount": 8
    }
  },
  
  "bannedPhrases": [
    "best ever",
    "amazing deal",
    "you won't believe",
    "secret",
    "hack",
    "trick",
    "loophole",
    "free money",
    "guaranteed",
    "act now",
    "limited time",
    "in order to",
    "due to the fact that",
    "there is",
    "there are",
    "it is important to note",
    "needless to say",
    "at the end of the day"
  ],
  
  "qualityChecks": {
    "passivVoiceMaxPercent": 10,
    "readabilityGradeMax": 10,
    "sentenceLengthMax": 35,
    "paragraphLengthMax": 4,
    "duplicatePhrasesMax": 2
  }
}

